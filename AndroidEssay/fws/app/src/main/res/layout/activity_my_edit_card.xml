<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingTop="19dp">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@mipmap/base_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_80dp"
            android:layout_marginRight="@dimen/app_80dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="编辑名片"
            android:textColor="#303133"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/app_20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/app_10dp"
                android:paddingBottom="@dimen/app_10dp"
                android:paddingLeft="@dimen/app_24dp"
                android:background="#F5F7FA"
                android:text="基本信息"
                android:textSize="14sp" />

            <LinearLayout
                style="@style/newly_ll_st"
                android:layout_marginTop="@dimen/app_10dp">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="头像"
                    android:textSize="15sp" />

                <com.mfzn.deepusesSer.view.RoundImageView
                    android:id="@+id/photo"
                    android:layout_width="@dimen/app_34dp"
                    android:layout_height="@dimen/app_34dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/moren_touxiang" />

                <ImageView
                    android:id="@+id/photo_icon"
                    style="@style/bass_iv_you" />
            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name"
                    style="@style/card_tv_value_style" />
            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="电话"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/card_tv_value_style" />
            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="邮箱"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/email"
                    style="@style/card_edit_style"
                    android:hint="请输入邮箱地址"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="工作年限"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/work_year"
                    style="@style/card_edit_style"
                    android:hint="请输入工作年限"
                    android:inputType="number" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/app_10dp"
                android:paddingBottom="@dimen/app_10dp"
                android:paddingLeft="@dimen/app_24dp"
                android:background="#F5F7FA"
                android:text="项目信息"
                android:textSize="14sp" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="家装数量"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/jz_number"
                    style="@style/card_edit_style"
                    android:hint="请输入已做家装数量"
                    android:inputType="number" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="工装数量"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/gz_number"
                    style="@style/card_edit_style"
                    android:hint="请输入已做工装数量"
                    android:inputType="number" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:layout_weight="1"
                    android:text="进行中项目数量"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/project"
                    style="@style/card_tv_value_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/compelete"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/app_24dp"
                android:layout_marginTop="@dimen/app_13dp"
                android:layout_marginRight="@dimen/app_24dp"
                android:background="@drawable/radius2_4a90e2_shape"
                android:gravity="center"
                android:text="完成"
                android:layout_marginBottom="28dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>