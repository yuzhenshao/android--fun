<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/app_12dp"
    android:paddingRight="@dimen/app_12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:layout_marginRight="@dimen/app_6dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:maxLines="1"
            android:text="文字"
            android:textColor="@color/color_606266"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>