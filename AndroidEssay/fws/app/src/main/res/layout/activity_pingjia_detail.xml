<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">
        <include layout="@layout/main_title"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/app_10dp"
                android:layout_marginTop="@dimen/app_10dp"
                android:background="@color/color_ffffff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <com.mfzn.deepusesSer.view.RoundImageView
                        android:id="@+id/iv_per_icon"
                        android:layout_width="@dimen/app_40dp"
                        android:layout_height="@dimen/app_40dp"
                        android:layout_marginLeft="24dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/person_center_default_icon"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:text="用户名用户名用户名"
                        android:textColor="#333333"
                        android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:text="2019-4-20"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_star1"
                        android:layout_width="@dimen/app_24dp"
                        android:layout_height="@dimen/app_24dp"
                        android:layout_marginLeft="@dimen/app_24dp"
                        android:src="@mipmap/star_unselected"/>
                    <ImageView
                        android:id="@+id/iv_star2"
                        android:layout_width="@dimen/app_24dp"
                        android:layout_height="@dimen/app_24dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/star_unselected"/>
                    <ImageView
                        android:id="@+id/iv_star3"
                        android:layout_width="@dimen/app_24dp"
                        android:layout_height="@dimen/app_24dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/star_unselected"/>
                    <ImageView
                        android:id="@+id/iv_star4"
                        android:layout_width="@dimen/app_24dp"
                        android:layout_height="@dimen/app_24dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/star_unselected"/>
                    <ImageView
                        android:id="@+id/iv_star5"
                        android:layout_width="@dimen/app_24dp"
                        android:layout_height="@dimen/app_24dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/star_unselected"/>

                    <TextView
                        android:id="@+id/tv_pingjia_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_15dp"
                        android:layout_gravity="center_vertical"
                        android:text="非常不满意"
                        android:textColor="#909399"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pingjia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/app_60dp"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:layout_marginRight="@dimen/app_24dp"
                    android:text="用户评论用户评论用户评论用户评论用户，评论用户 评论用户评论。用户评论用户评论用户评论用户评论 用户评论。"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleview"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="@dimen/app_24dp"
                    android:layout_marginTop="@dimen/app_15dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>