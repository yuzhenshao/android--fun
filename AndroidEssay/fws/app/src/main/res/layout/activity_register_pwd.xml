<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_ffffff"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <include layout="@layout/main_title"/>

            <TextView
                android:id="@+id/tv_ri_pwd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#303133"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="26dp"
                android:text="请设置密码"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_regi_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:password="true"
                    android:paddingBottom="10dp"
                    android:textColor="#606266"
                    android:textColorHint="#bfc2cc"
                    android:hint="请输入密码"/>

                <ImageButton
                    android:id="@+id/iv_regi_eye"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:padding="11dp"
                    android:src="@mipmap/pwd_close"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#edeff2"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_regi_pwd_err"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#d0021b"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:layout_marginLeft="36dp"
                    android:text="密码长度至少为六个字符"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_regi_pwd2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"
                        android:paddingBottom="10dp"
                        android:password="true"
                        android:textColor="#606266"
                        android:textColorHint="#bfc2cc"
                        android:hint="请确认密码"/>

                    <ImageButton
                        android:id="@+id/iv_regi_eye2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@null"
                        android:padding="11dp"
                        android:src="@mipmap/pwd_close"/>

                </LinearLayout>

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#edeff2"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_regi_pwd_err2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#d0021b"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:layout_marginLeft="36dp"
                    android:text="密码长度至少为六个字符"/>

                <Button
                    android:id="@+id/but_next"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="确定"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:enabled="false"
                    android:background="@drawable/yuanjiao_bfc2cc_button_shape"
                    android:layout_marginTop="60dp"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>