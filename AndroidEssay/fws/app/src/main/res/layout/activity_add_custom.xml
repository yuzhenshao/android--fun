<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/app_10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_42dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_24dp"
            android:textColor="@color/color_303133"
            android:text="客服"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_52dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/newly_tv_st"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="类型"/>

            <EditText
                android:id="@+id/et_add_type"
                style="@style/newly_et_st"
                android:hint="@string/add_custom_shuru"/>

        </LinearLayout>

        <View style="@style/line_heng"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_52dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/newly_tv_st"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="姓名"/>

            <EditText
                android:id="@+id/et_add_name"
                style="@style/newly_et_st"
                android:hint="@string/add_custom_shuru"/>

        </LinearLayout>

        <View style="@style/line_heng"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_52dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/newly_tv_st"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="电话"/>

            <EditText
                android:id="@+id/et_add_phone"
                style="@style/newly_et_st"
                android:inputType="number"
                android:hint="@string/add_custom_shuru"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/weight_shu"/>

    <Button
        android:id="@+id/but_add_qr"
        style="@style/bass_but"
        android:text="确认"
        android:layout_marginBottom="@dimen/app_21dp"/>

</LinearLayout>