<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/app_10dp"
            android:layout_marginLeft="@dimen/app_16dp"
            android:layout_marginRight="@dimen/app_16dp">

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_fa_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工单"
                    android:textColor="@color/color_303133"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pop_down"/>
            </LinearLayout>

            <View style="@style/weight_heng" />

            <TextView
                android:id="@+id/tv_wait_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="@dimen/app_10dp"
                android:paddingRight="@dimen/app_10dp"
                android:text="待接单"
                android:textColor="@color/color_303133"
                android:textSize="16sp" />

            <View style="@style/weight_heng" />

            <TextView
                android:id="@+id/tv_serving"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="@dimen/app_10dp"
                android:paddingRight="@dimen/app_10dp"
                android:text="服务中"
                android:textColor="@color/color_909399"
                android:textSize="16sp" />

            <View style="@style/weight_heng" />

            <TextView
                android:id="@+id/tv_wait_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="@dimen/app_10dp"
                android:paddingRight="@dimen/app_10dp"
                android:text="待评价"
                android:textColor="@color/color_909399"
                android:textSize="16sp" />

            <View style="@style/weight_heng" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="@dimen/app_10dp"
                android:paddingRight="@dimen/app_10dp"
                android:text="已结束"
                android:textColor="@color/color_909399"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <com.mfzn.deepusesSer.view.MyViewPager
        android:id="@+id/fa_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>