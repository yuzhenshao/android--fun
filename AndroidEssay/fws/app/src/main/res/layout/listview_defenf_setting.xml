<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_57dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_57dp">
        
        <EditText
            android:id="@+id/et_def_item_type"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:paddingLeft="@dimen/app_24dp"
            android:textColorHint="@color/color_909399"
            android:textColor="@color/color_606266"
            android:hint="请输入"
            android:background="@null"/>

        <EditText
            android:id="@+id/et_def_item_time"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:paddingLeft="@dimen/app_24dp"
            android:textColorHint="@color/color_909399"
            android:textColor="@color/color_606266"
            android:hint="请选择"
            android:focusableInTouchMode="false"
            android:background="@null"/>

        <EditText
            android:id="@+id/et_def_item_days"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:paddingLeft="@dimen/app_24dp"
            android:textColorHint="@color/color_909399"
            android:textColor="@color/color_606266"
            android:inputType="number"
            android:hint="请输入"
            android:background="@null"/>
        
        <LinearLayout
            android:id="@+id/ll_def_item_delete"
            android:layout_width="@dimen/app_50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="@dimen/app_24dp"
                android:layout_height="@dimen/app_24dp"
                android:layout_marginRight="@dimen/app_15dp"
                android:src="@mipmap/select_delete"/>

        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>