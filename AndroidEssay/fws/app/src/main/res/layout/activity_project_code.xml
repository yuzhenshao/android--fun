<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/yuanjiao_ffffff_bg_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code_jiacu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#606266"
                    android:textSize="18sp"
                    android:text="诚邀您加入"/>

                <TextView
                    android:id="@+id/tv_code_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#909399"
                    android:textSize="16sp"
                    android:text=""/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_code_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/code_gongsi"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="223dp"
            android:layout_height="223dp"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="27dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#bfc2cc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#bfc2cc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="打开云知枢扫一扫加入项目"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#bfc2cc"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/yuanjiao_ffffff_bg_shape">

        <LinearLayout
            android:id="@+id/ll_code_xiazai"
            android:layout_width="50dp"
            android:background="@drawable/yuan_yinying_xian_shape"
            android:gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/code_xiazai"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_code_qq"
            android:layout_width="50dp"
            android:background="@drawable/yuan_yinying_xian_shape"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/code_qq"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_code_weixin"
            android:layout_width="50dp"
            android:background="@drawable/yuan_yinying_xian_shape"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/code_weixin"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_code_ali"
            android:layout_width="50dp"
            android:background="@drawable/yuan_yinying_xian_shape"
            android:gravity="center"
            android:layout_marginRight="18dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/code_ali"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>