<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mfzn.deepusesSer.view.MyListview
            android:id="@+id/_balistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:dividerHeight="1dp"
            android:listSelector="#00000000"
            android:layout_marginBottom="@dimen/app_50dp"
            android:divider="#f5f7fa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_49dp"
            android:background="@color/color_edeff2"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ba_recycleview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_ba_move"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/color_4A90E2"
                android:gravity="center"
                android:paddingLeft="@dimen/app_25dp"
                android:paddingRight="@dimen/app_25dp"
                android:text="移动到"/>

        </LinearLayout>
        
    </FrameLayout>

</LinearLayout>