<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/app_30dp"
        android:layout_height="wrap_content">

        <com.mfzn.deepusesSer.view.RoundImageView
            android:id="@+id/iv_stag_item_icon"
            android:layout_width="@dimen/app_43dp"
            android:layout_height="@dimen/app_43dp"
            android:scaleType="fitXY"
            android:src="@mipmap/moren_touxiang"/>

        <TextView
            android:id="@+id/tv_stag_item_name"
            style="@style/staging_pro_tv"
            android:layout_marginTop="@dimen/app_5dp"
            android:text="至尊宝"/>

        <TextView
            android:id="@+id/tv_stag_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_BFC2CC"
            android:layout_marginTop="@dimen/app_4dp"
            android:text="售后客服"/>

    </LinearLayout>

</LinearLayout>