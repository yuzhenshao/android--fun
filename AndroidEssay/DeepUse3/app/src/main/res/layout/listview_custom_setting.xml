<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_42dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/app_24dp"
                android:textColor="@color/color_303133"
                android:text="客服"/>

            <LinearLayout
                android:id="@+id/ll_cus_item_delete"
                android:layout_width="@dimen/app_60dp"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginRight="@dimen/app_20dp"
                    android:src="@mipmap/select_delete"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_52dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="类型"/>

            <TextView
                android:id="@+id/tv_cus_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_24dp"
                android:textSize="16sp"
                android:textColor="@color/color_909399"
                android:text=""/>

        </LinearLayout>

        <View style="@style/line_heng"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_52dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="姓名"/>

            <TextView
                android:id="@+id/tv_cus_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_24dp"
                android:textSize="16sp"
                android:textColor="@color/color_909399"
                android:text=""/>

        </LinearLayout>

        <View style="@style/line_heng"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_52dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="电话"/>

            <TextView
                android:id="@+id/tv_cus_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_24dp"
                android:textSize="16sp"
                android:textColor="@color/color_909399"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>