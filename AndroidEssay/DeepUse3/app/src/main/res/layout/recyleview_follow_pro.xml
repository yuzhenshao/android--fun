<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<include layout="@layout/loyout_follow_pro"/>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/app_3dp"
            android:layout_height="@dimen/app_23dp"
            android:layout_marginLeft="27dp"
            android:background="@color/color_DCDCDC" />

        <View
            android:layout_width="@dimen/app_10dp"
            android:layout_height="@dimen/app_10dp"
            android:layout_marginTop="@dimen/app_23dp"
            android:layout_marginLeft="@dimen/app_24dp"
            android:background="@drawable/yuan_4a90e2_dian_shape" />

        <View
            android:layout_width="@dimen/app_3dp"
            android:layout_height="@dimen/app_50dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="27dp"
            android:background="@color/color_DCDCDC" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_44dp"
            android:layout_marginTop="@dimen/app_19dp">

            <TextView
                android:id="@+id/tv_foll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sadsada"
                android:textColor="@color/color_303133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_foll_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/app_24dp"
                android:text="sasas"
                android:textColor="@color/color_909399"
                android:textSize="14sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_foll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_10dp"
            android:text="sasa"
            android:layout_marginLeft="@dimen/app_44dp"
            android:textColor="@color/color_303133"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/app_3dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="27dp"
                android:background="@color/color_DCDCDC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_foll_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_10dp"
                    android:layout_marginRight="@dimen/app_24dp"
                    android:layout_marginBottom="@dimen/app_20dp"
                    android:text="跟客户电话沟通了一下，有个项目在找服务商，价格还没谈，先看设计图，三天后给设计图，明天微信再联系一下….."
                    android:textColor="@color/color_606266"
                    android:textSize="14sp" />

                <com.mfzn.deepuses.view.MyRecyclerView
                    android:id="@+id/fl_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_75dp"
                    android:layout_marginBottom="@dimen/app_20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>