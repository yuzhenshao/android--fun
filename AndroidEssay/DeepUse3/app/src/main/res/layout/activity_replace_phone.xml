<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <TextView
        android:id="@+id/tv_rep_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_909399"
        android:layout_marginLeft="@dimen/app_24dp"
        android:layout_marginRight="@dimen/app_24dp"
        android:layout_marginTop="@dimen/app_14dp"
        android:text="更换手机号后，下次登陆可使用新手机号登陆，当前手机号将作废。当前手机号："/>

    <LinearLayout
        style="@style/newly_ll_st"
        android:layout_marginTop="@dimen/app_10dp"
        android:background="@color/color_ffffff">

        <TextView
            style="@style/newly_tv_st"
            android:textColor="@color/color_303133"
            android:text="+86"/>

        <EditText
            android:id="@+id/et_rep_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:paddingLeft="@dimen/app_40dp"
            android:textColorHint="@color/color_909399"
            android:textColor="@color/color_303133"
            android:hint="请填写新手机号码"
            android:inputType="number"
            android:background="@null"/>

    </LinearLayout>

    <Button
        android:id="@+id/but_rep_next"
        style="@style/bass_but"
        android:text="下一步"
        android:layout_marginTop="30dp"/>

</LinearLayout>