<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_24dp"
    android:layout_marginTop="@dimen/app_13dp"
    android:layout_marginRight="@dimen/app_24dp"
    android:layout_marginBottom="@dimen/app_12dp">

    <ImageView
        android:id="@+id/icon_goods"
        android:layout_width="@dimen/app_75dp"
        android:layout_height="@dimen/app_75dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_no_data" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/icon_goods"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="云"
        android:textColor="#303133"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/goods_stock_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/app_20dp"
        android:layout_toRightOf="@+id/icon_goods"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="库存：5"
        android:textColor="#ffe02020"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/goods_stock_num"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/app_20dp"
        android:background="@drawable/flowing_type_tv_bule_shape"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="库存：5"
        android:textColor="#3d7eff"
        android:textSize="16sp" />
</RelativeLayout>