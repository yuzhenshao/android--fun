<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_53dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="@dimen/app_12dp"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/filter"
        android:layout_width="@dimen/app_24dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_10dp"
        android:src="@mipmap/cus_shaixuan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/filter"
        android:background="@drawable/yuanjiao_edeff2_bg_shape"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/search" />

        <EditText
            android:id="@+id/serach_edit"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="10dp"
            android:textColor="#303133"
            android:textColorHint="#909399"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>