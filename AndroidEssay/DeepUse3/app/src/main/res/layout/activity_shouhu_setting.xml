<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_105dp"
                    android:layout_marginLeft="@dimen/app_12dp"
                    android:layout_marginTop="@dimen/app_10dp"
                    android:layout_marginRight="@dimen/app_12dp"
                    android:background="@drawable/yuanjiao_yinying_xian_shape"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/app_52dp"
                        android:layout_height="@dimen/app_52dp"
                        android:layout_marginLeft="@dimen/app_26dp"
                        android:src="@mipmap/work_moren" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_18dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_shou_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/color_303133"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_shou_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/app_46dp"
                                android:text=""
                                android:textColor="@color/color_303133"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_shou_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_4dp"
                            android:layout_marginRight="@dimen/app_50dp"
                            android:text=""
                            android:textColor="@color/color_909399"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_5dp"
                    android:layout_marginLeft="@dimen/app_12dp"
                    android:layout_marginRight="@dimen/app_12dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/work_xian" />

                <TextView
                    style="@style/edit_staff_tv"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:layout_marginTop="@dimen/app_15dp"
                    android:text="质保设置"
                    android:textStyle="bold" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="质保期限" />

                    <EditText
                        android:id="@+id/et_shou_zbqx"
                        style="@style/shouhu_et"
                        android:hint="请输入 月"
                        android:inputType="number"
                        android:paddingRight="@dimen/app_10dp" />

                    <ImageView
                        style="@style/bass_iv_you"
                        android:layout_marginRight="@dimen/app_14dp" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="质保起始日期" />

                    <EditText
                        android:id="@+id/tv_shou_start"
                        style="@style/shouhu_et2"
                        android:hint="选择时间"
                        android:paddingRight="@dimen/app_10dp" />

                    <ImageView
                        style="@style/bass_iv_you"
                        android:layout_marginRight="@dimen/app_14dp" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="质保截止日期" />

                    <EditText
                        android:id="@+id/et_shou_end"
                        style="@style/shouhu_et2"
                        android:paddingRight="@dimen/app_48dp"
                        android:hint="无需填写，自动计算"/>

                </LinearLayout>

                <View
                    style="@style/line_heng"
                    android:layout_height="@dimen/app_10dp" />

                <TextView
                    style="@style/edit_staff_tv"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:layout_marginTop="@dimen/app_15dp"
                    android:text="延保设置"
                    android:textStyle="bold" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="延保期限" />

                    <EditText
                        android:id="@+id/et_shou_ybqx"
                        style="@style/shouhu_et"
                        android:hint="请输入 月"
                        android:inputType="number"
                        android:paddingRight="@dimen/app_10dp" />

                    <ImageView
                        style="@style/bass_iv_you"
                        android:layout_marginRight="@dimen/app_14dp" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="延保截止日期" />

                    <EditText
                        android:id="@+id/et_shou_ybjz"
                        style="@style/shouhu_et2"
                        android:paddingRight="@dimen/app_48dp"
                        android:hint="无需填写，自动计算"/>

                </LinearLayout>

                <View
                    style="@style/line_heng"
                    android:layout_height="@dimen/app_10dp" />

                <TextView
                    style="@style/edit_staff_tv"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:layout_marginTop="@dimen/app_15dp"
                    android:text="回访设置"
                    android:textStyle="bold" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="下次回访时间" />

                    <EditText
                        android:id="@+id/tv_shou_nexttime"
                        style="@style/shouhu_et2"
                        android:hint="选择时间"
                        android:paddingRight="@dimen/app_10dp" />

                    <ImageView
                        style="@style/bass_iv_you"
                        android:layout_marginRight="@dimen/app_14dp" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/staging_pro_tv"
                        android:text="回访间隔时间" />

                    <EditText
                        android:id="@+id/et_shou_hfjg"
                        style="@style/shouhu_et"
                        android:hint="请输入 天"
                        android:inputType="number"
                        android:paddingRight="@dimen/app_10dp" />

                    <ImageView
                        style="@style/bass_iv_you"
                        android:layout_marginRight="@dimen/app_14dp" />

                </LinearLayout>

                <View
                    style="@style/line_heng"
                    android:layout_height="@dimen/app_10dp" />

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/edit_staff_tv"
                        android:layout_weight="1"
                        android:text="质保预警提醒"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/ib_shou_zbyj"
                        android:layout_width="@dimen/app_52dp"
                        android:layout_height="@dimen/app_23dp"
                        android:layout_marginRight="@dimen/app_24dp"
                        android:src="@mipmap/shou_close" />

                </LinearLayout>

                <View style="@style/line_heng"/>

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/edit_staff_tv"
                        android:layout_weight="1"
                        android:text="延保预警提醒"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/ib_shou_ybyj"
                        android:layout_width="@dimen/app_52dp"
                        android:layout_height="@dimen/app_23dp"
                        android:layout_marginRight="@dimen/app_24dp"
                        android:src="@mipmap/shou_close" />

                </LinearLayout>

                <View style="@style/line_heng"/>

                <LinearLayout style="@style/shouhu_ll">

                    <TextView
                        style="@style/edit_staff_tv"
                        android:layout_weight="1"
                        android:text="回访提醒"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/ib_shou_hftx"
                        android:layout_width="@dimen/app_52dp"
                        android:layout_height="@dimen/app_23dp"
                        android:layout_marginRight="@dimen/app_24dp"
                        android:src="@mipmap/shou_close" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_f5f7fa">

                    <Button
                        android:id="@+id/but_shou_qr"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/app_15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="@dimen/app_25dp"
                        android:background="@drawable/yuanjiao_4a9012_button_shape"
                        android:text="确认"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>