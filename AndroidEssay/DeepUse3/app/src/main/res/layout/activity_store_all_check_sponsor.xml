<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.libcommon.titlebar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="公司/门店" />

        <EditText
            android:id="@+id/shop"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/shop_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />

    </LinearLayout>

    <View style="@style/line_heng" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="盘点仓库" />

        <EditText
            android:id="@+id/store_check"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/store_check_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />

    </LinearLayout>

    <View style="@style/line_heng" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="盘点开始日期" />

        <EditText
            android:id="@+id/start_time"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/start_time_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />

    </LinearLayout>

    <View style="@style/line_heng" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="盘点结束日期" />

        <EditText
            android:id="@+id/endtime"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/endtime_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginTop="@dimen/app_30dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_11dp"
        android:background="@drawable/submit_btn_selector"
        android:text="提交"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp" />
</LinearLayout>