<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_120dp"
        android:layout_marginLeft="@dimen/app_12dp"
        android:layout_marginRight="@dimen/app_12dp"
        android:layout_marginTop="@dimen/app_10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@mipmap/br_bg_guang">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/app_21dp"
            android:text="总砖数"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_br_sumz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="34sp"
                android:layout_marginLeft="@dimen/app_19dp"
                android:text="0"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/app_10dp"
                android:layout_marginBottom="@dimen/app_3dp"
                android:text="砖"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/app_3dp"
                android:text="累计充值："/>

            <TextView
                android:id="@+id/tv_br_sumq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/app_3dp"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/app_20dp"
                android:layout_marginBottom="@dimen/app_3dp"
                android:text=" 元"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/tr_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_50dp"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tr_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>