<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_110dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/store_icon"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#3D7EFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_24dp"
        android:paddingRight="@dimen/app_24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_16dp">

            <TextView
                android:id="@+id/supplier_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="XS201910011203911"
                android:textColor="#ff303133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/supplier_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="采购1"
                android:textColor="#ff303133"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_20dp">

            <TextView
                android:id="@+id/supplier_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量：2"
                android:textColor="#ff606266"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="金额：800.00（已收款）"
                android:textColor="#ff606266"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_10dp"
            android:layout_marginBottom="@dimen/app_5dp">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总仓/已入库"
                android:textColor="#606266"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2019/10/01"
                android:textColor="#ff606266"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>