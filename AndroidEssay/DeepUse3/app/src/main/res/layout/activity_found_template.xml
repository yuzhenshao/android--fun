<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:id="@+id/ll_fou_tips"
        style="@style/tips_ll">

        <TextView
            style="@style/tips_tv"
            android:text="请创建模版计划，才可以进行管理项目"/>

        <ImageView
            android:id="@+id/iv_fou_delete"
            style="@style/tips_iv"
            android:src="@mipmap/select_delete"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_20dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="@dimen/app_6dp"
            android:layout_height="@dimen/app_6dp"
            android:layout_marginLeft="@dimen/app_12dp"
            android:background="@drawable/yuan_4a90e2_dian_shape"/>

        <TextView
            android:id="@+id/tv_fou_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_303133"
            android:layout_marginLeft="@dimen/app_5dp"
            android:text="项目名称：万达广场项目"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fou_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_100dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_20dp"
        android:background="@drawable/yuanjiao_ffffff_bg_shape"
        android:layout_marginLeft="@dimen/app_12dp"
        android:layout_marginRight="@dimen/app_12dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_fou_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_303133"
            android:text="从模版选择"/>

        <ImageView
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_12dp"
            android:layout_marginLeft="@dimen/app_4dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fou_copy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_100dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_15dp"
        android:background="@drawable/yuanjiao_ffffff_bg_shape"
        android:layout_marginLeft="@dimen/app_12dp"
        android:layout_marginRight="@dimen/app_12dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_fou_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_303133"
            android:text="从项目复制"/>

        <ImageView
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_12dp"
            android:layout_marginLeft="@dimen/app_4dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fou_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_100dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_15dp"
        android:background="@drawable/yuanjiao_ffffff_bg_shape"
        android:layout_marginLeft="@dimen/app_12dp"
        android:layout_marginRight="@dimen/app_12dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_fou_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_303133"
            android:text="个人手工创建"/>

        <ImageView
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_12dp"
            android:layout_marginLeft="@dimen/app_4dp"/>

    </LinearLayout>

</LinearLayout>