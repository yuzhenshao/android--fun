<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_item_icon"
            style="@style/shenpi_iv"
            android:src="@mipmap/work_pinpai"/>

        <TextView
            android:id="@+id/tv_home_item_name"
            style="@style/shenpi_tv"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/app_5dp"
            android:text="品牌传播"/>

    </LinearLayout>

</LinearLayout>