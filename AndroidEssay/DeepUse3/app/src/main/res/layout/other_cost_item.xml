<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="#F5F7FA">
    <TextView
        android:id="@+id/cost_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_24dp"
        android:text="费用1"
        android:textColor="#ff303133"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/app_20dp"
        android:src="@mipmap/work_delete2"/>
</RelativeLayout>

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="费用类型" />

        <EditText
            android:id="@+id/cost_type"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/cost_type_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />

    </LinearLayout>

    <View style="@style/line_heng" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="金额" />

        <EditText
            android:id="@+id/cost_price"
            style="@style/newly_et_st"
            android:hint="@string/add_custom_shuru"
            android:inputType="number" />

    </LinearLayout>

    <View style="@style/line_heng" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_24dp"
            android:gravity="center_vertical"
            android:text="是否含税"
            android:textColor="#ff606266"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/check_box_selector"
            android:button="@null"
            android:focusable="false"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <View style="@style/line_heng" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="税率" />

        <EditText
            android:id="@+id/tax_rate"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/tax_rate_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />

    </LinearLayout>
</LinearLayout>