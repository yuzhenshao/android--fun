<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_53dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/app_10dp"
        android:background="@color/color_ffffff">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao_edeff2_bg_shape"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:layout_height="32dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/search"/>

            <EditText
                android:id="@+id/et_cus_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:hint="搜索客户"
                android:textSize="14sp"
                android:textColorHint="#909399"
                android:paddingLeft="10dp"
                android:textColor="#303133"
                android:focusableInTouchMode="false"
                android:background="@null"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cus_sx"
            android:layout_width="@dimen/app_54dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/app_24dp"
                android:layout_height="@dimen/app_24dp"
                android:layout_marginLeft="@dimen/app_10dp"
                android:src="@mipmap/cus_shaixuan"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.droidlover.xrecyclerview.XRecyclerContentLayout
            android:id="@+id/wh_xrecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:recyclerBackgroundColor="@color/color_f5f7fa" />

        <LinearLayout
            android:id="@+id/ll_wh_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:background="@color/color_f5f7fa">

            <ImageView
                android:layout_width="@dimen/app_120dp"
                android:layout_height="@dimen/app_120dp"
                android:src="@mipmap/zuzhi_kongbai"
                android:layout_marginTop="@dimen/app_72dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_909399"
                android:layout_marginTop="@dimen/app_20dp"
                android:text="暂无记录"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>