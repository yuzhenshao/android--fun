<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f7fa"
    android:orientation="vertical">


    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="盘点仓库" />

        <EditText
            android:id="@+id/store_name"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/select_store"
            style="@style/btn_select" />

    </LinearLayout>

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="产品" />

        <EditText
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/select_goods"
            style="@style/btn_select" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_recyleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="@dimen/app_24dp" />

    <View
        android:id="@+id/line_space"
        style="@style/line_space" />

    <LinearLayout
        style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="单据日期" />

        <EditText
            android:id="@+id/order_time"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/select_order_time"
            style="@style/btn_select" />

    </LinearLayout>


    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="外部单号" />

        <EditText
            android:id="@+id/out_num"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_shuru" />
    </LinearLayout>

    <RelativeLayout
        style="@style/newly_ll_st"
        android:paddingRight="@dimen/app_24dp">

        <TextView
            style="@style/newly_tv_st"
            android:layout_alignParentLeft="true"
            android:text="制单人" />

        <TextView
            android:id="@+id/order_maker_user_name"
            style="@style/edit_staff_tv"
            android:layout_alignParentRight="true"
            android:text="销售张" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_24dp"
        android:paddingTop="@dimen/app_22dp"
        android:paddingRight="@dimen/app_24dp"
        android:paddingBottom="@dimen/app_22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="#ff606266"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_10dp"
            android:background="@null"
            android:hint="请输入盘点单备注（0/200）"
            android:textColor="#ff909399"
            android:textSize="16sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginTop="@dimen/app_30dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_11dp"
        android:background="@drawable/submit_btn_selector"
        android:text="提交"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp" />
</LinearLayout>