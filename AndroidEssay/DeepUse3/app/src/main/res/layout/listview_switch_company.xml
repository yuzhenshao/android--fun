<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_60dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_60dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_swi_item_del"
                android:layout_width="@dimen/app_44dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginLeft="@dimen/app_20dp"
                    android:src="@mipmap/swi_delete"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_swi_item_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/app_24dp"
                android:textColor="@color/color_303133"
                android:text="麦麸智能（常州）有限公司"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_swi_item_dh"
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/regi_weixuan"/>

        <TextView
            android:id="@+id/tv_swi_item_del"
            android:layout_width="@dimen/app_60dp"
            android:layout_height="match_parent"
            android:background="@color/color_D0021B"
            android:textSize="16sp"
            android:textColor="@color/color_ffffff"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:visibility="gone"
            android:text="退出"/>

    </FrameLayout>

</LinearLayout>