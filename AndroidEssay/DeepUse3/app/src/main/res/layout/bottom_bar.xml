<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="49dp"
    android:layout_alignParentBottom="true"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <LinearLayout
            android:id="@+id/ll_main_gongzuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_gongzuo"
                android:layout_width="48dp"
                android:layout_height="31dp"
                android:src="@mipmap/bass_work2" />

            <TextView
                android:id="@+id/tv_main_gongzuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#3D7EFF"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_xiangmu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_xiangmu"
                android:layout_width="48dp"
                android:layout_height="31dp"
                android:src="@mipmap/bass_xiangmu" />

            <TextView
                android:id="@+id/tv_main_xiangmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目"
                android:textColor="#909399"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_main_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_main_add" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_xiaoxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_main_xiaoxi"
                    android:layout_width="48dp"
                    android:layout_height="31dp"
                    android:src="@mipmap/bass_xiaoxi" />

                <TextView
                    android:id="@+id/tv_tdxx_num"
                    android:layout_width="@dimen/app_14dp"
                    android:layout_height="@dimen/app_14dp"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:layout_marginTop="@dimen/app_3dp"
                    android:background="@drawable/red_point_shape"
                    android:gravity="center"
                    android:text="111"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_main_xiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="#909399"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_me"
                android:layout_width="48dp"
                android:layout_height="31dp"
                android:src="@mipmap/bass_me" />

            <TextView
                android:id="@+id/tv_main_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="#909399"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>