<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:id="@+id/ll_set_info"
        style="@style/newly_ll_st"
        android:layout_marginTop="@dimen/app_10dp"
        android:background="@color/color_ffffff">

        <TextView
            style="@style/newly_tv_st"
            android:layout_weight="1"
            android:text="接收消息通知"/>

        <TextView
            android:id="@+id/tv_news_type"
            style="@style/newly_tv_st"
            android:textColor="@color/color_303133"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_news_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_909399"
        android:layout_marginLeft="@dimen/app_24dp"
        android:layout_marginRight="@dimen/app_24dp"
        android:layout_marginTop="@dimen/app_10dp"
        android:visibility="gone"
        android:text="请在设备的“设置”-“通知中心”功能中，找到应用程序“云知枢”打开消息通知。"/>

    <TextView
        android:id="@+id/tv_news_tips2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_909399"
        android:layout_marginLeft="@dimen/app_24dp"
        android:layout_marginRight="@dimen/app_24dp"
        android:layout_marginTop="@dimen/app_10dp"
        android:visibility="gone"
        android:text="更改通知样式，请在设备的“设置”-“通知中心”功能中，找到应用程序“云知枢”进行修改。"/>

    <Button
        android:id="@+id/but_open"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="前往开启消息通知"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:visibility="gone"
        android:background="@drawable/yuanjiao_4a9012_button_shape"
        android:layout_marginTop="20dp"/>

</LinearLayout>