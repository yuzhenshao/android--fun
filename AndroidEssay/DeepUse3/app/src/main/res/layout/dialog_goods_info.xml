<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_24dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="产品参数"
        android:textColor="#ff303133"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirm_btn"
        android:layout_below="@+id/title"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="商品名称" />

                <TextView
                    android:id="@+id/goods_name"
                    style="@style/newly_tx" />

            </LinearLayout>


            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="零售价" />

                <TextView
                    android:id="@+id/sale_price"
                    style="@style/newly_tx"
                    android:text="90" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="库存" />

                <TextView
                    android:id="@+id/store_container"
                    style="@style/newly_tx"
                    android:text="90" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="条码" />

                <TextView
                    android:id="@+id/goods_bar_code"
                    style="@style/newly_tx" />

            </LinearLayout>


            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="品牌" />

                <TextView
                    android:id="@+id/goods_brand"
                    style="@style/newly_tx" />

            </LinearLayout>

            <View style="@style/line_heng" />


            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="规格" />

                <TextView
                    android:id="@+id/goods_attr"
                    style="@style/newly_tx" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="类别" />

                <TextView
                    android:id="@+id/goods_category"
                    style="@style/newly_tx" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="单位" />

                <TextView
                    android:id="@+id/goods_unit"
                    style="@style/newly_tx" />

            </LinearLayout>

            <View style="@style/line_heng" />

            <LinearLayout style="@style/newly_ll_st">

                <TextView
                    style="@style/newly_tv_st"
                    android:text="定位" />

                <TextView
                    android:id="@+id/goods_position"
                    style="@style/newly_tx" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_40dp"
        android:background="@drawable/submit_btn_selector"
        android:text="确定"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp" />

</RelativeLayout>