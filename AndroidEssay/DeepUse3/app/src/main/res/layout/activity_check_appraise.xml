<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/main_title"/>

    <View
        style="@style/line_heng"
        android:layout_height="@dimen/app_10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/app_24dp"
            android:paddingRight="@dimen/app_24dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_10dp"
                android:gravity="center_vertical">

                <com.mfzn.deepuses.view.RoundImageView
                    android:id="@+id/iv_ch_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/moren_touxiang"/>

                <TextView
                    android:id="@+id/tv_ch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_303133"
                    android:layout_marginLeft="@dimen/app_10dp"
                    android:text=""/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_909399"
                android:layout_marginTop="@dimen/app_10dp"
                android:text=""/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/app_8dp">

                <ImageView
                    android:id="@+id/iv_ch_xx1"
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:src="@mipmap/xx_weixuan"/>

                <ImageView
                    android:id="@+id/iv_ch_xx2"
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginLeft="@dimen/app_5dp"
                    android:src="@mipmap/xx_weixuan"/>

                <ImageView
                    android:id="@+id/iv_ch_xx3"
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginLeft="@dimen/app_5dp"
                    android:src="@mipmap/xx_weixuan"/>

                <ImageView
                    android:id="@+id/iv_ch_xx4"
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginLeft="@dimen/app_5dp"
                    android:src="@mipmap/xx_weixuan"/>

                <ImageView
                    android:id="@+id/iv_ch_xx5"
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginLeft="@dimen/app_5dp"
                    android:src="@mipmap/xx_weixuan"/>

                <TextView
                    android:id="@+id/tv_ch_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_909399"
                    android:layout_marginLeft="@dimen/app_16dp"
                    android:text=""/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ch_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_606266"
                android:layout_marginTop="@dimen/app_20dp"
                android:text=""/>

            <com.mfzn.deepuses.view.MyRecyclerView
                android:id="@+id/ch_recyleview"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/app_30dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>