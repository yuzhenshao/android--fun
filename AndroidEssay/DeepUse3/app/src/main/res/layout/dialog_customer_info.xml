<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f7fa"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f7fa"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/found_pro_ll">

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="客户名称" />

                        <TextView
                            android:id="@+id/customer_name"
                            style="@style/newly_et_st2" />

                    </LinearLayout>


                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="联系电话" />

                        <TextView
                            android:id="@+id/customer_phone"
                            style="@style/newly_et_st2" />

                    </LinearLayout>

                    <View style="@style/line_heng" />


                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="负责人姓名" />

                        <TextView
                            android:id="@+id/charge_person_name"
                            style="@style/newly_et_st2" />

                    </LinearLayout>


                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="负责人电话" />

                        <EditText
                            android:id="@+id/charge_person_phone"
                            style="@style/newly_et_st2" />

                    </LinearLayout>


                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="客户等级" />

                        <TextView
                            android:id="@+id/level_name"
                            style="@style/newly_et_st2" />


                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="客户类型" />

                        <TextView
                            android:id="@+id/customer_type"
                            style="@style/newly_et_st2" />

                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <TextView
                        style="@style/newly_tv_st"
                        android:layout_marginLeft="@dimen/app_24dp"
                        android:layout_marginTop="@dimen/app_20dp"
                        android:text="地址" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingLeft="@dimen/app_24dp"
                        android:paddingTop="@dimen/app_20dp"
                        android:paddingRight="@dimen/app_24dp"
                        android:paddingBottom="@dimen/app_20dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_BFC2CC"
                        android:textSize="16sp" />

                    <View style="@style/line_heng" />

                    <TextView
                        style="@style/newly_tv_st"
                        android:layout_marginLeft="@dimen/app_24dp"
                        android:layout_marginTop="@dimen/app_20dp"
                        android:text="备注" />

                    <TextView
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingLeft="@dimen/app_24dp"
                        android:paddingTop="@dimen/app_20dp"
                        android:paddingRight="@dimen/app_24dp"
                        android:paddingBottom="@dimen/app_20dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_BFC2CC"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/app_20dp"
                    android:layout_marginTop="@dimen/app_30dp"
                    android:layout_marginRight="@dimen/app_20dp"
                    android:layout_marginBottom="@dimen/app_11dp"
                    android:background="@drawable/submit_btn_selector"
                    android:text="确定"
                    android:textColor="@color/color_ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>