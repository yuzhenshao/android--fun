<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <com.libcommon.titlebar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/line_heng" />

    <RelativeLayout
        android:id="@+id/customer_info_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_100dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/customer_icon"
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/app_24dp"
            android:layout_marginTop="@dimen/app_8dp"
            android:src="@mipmap/icon_customer" />


        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/app_8dp"
            android:layout_toRightOf="@+id/customer_icon"
            android:gravity="center_vertical"
            android:text="陈萍萍"
            android:textColor="#ff303133"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_20dp"
            android:layout_below="@+id/customer_name"
            android:layout_alignLeft="@+id/customer_name"
            android:layout_marginTop="@dimen/app_11dp"
            android:text="合作客户"
            android:textColor="#D0021B"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/leavel_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_20dp"
            android:layout_below="@+id/customer_name"
            android:layout_marginLeft="@dimen/app_5dp"
            android:layout_marginTop="@dimen/app_8dp"
            android:layout_toRightOf="@+id/customer_type"
            android:src="@mipmap/cus_level1" />

        <TextView
            android:id="@+id/leavel_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_20dp"
            android:layout_below="@+id/customer_name"
            android:layout_marginLeft="@dimen/app_5dp"
            android:layout_marginTop="@dimen/app_8dp"
            android:layout_toRightOf="@+id/leavel_icon"
            android:gravity="center_vertical"
            android:text="一星级"
            android:textColor="@color/x_yellow"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_24dp"
            android:layout_below="@+id/customer_type"
            android:layout_alignLeft="@+id/customer_icon"
            android:layout_marginTop="@dimen/app_5dp"
            android:drawableLeft="@mipmap/icon_phone_gray"
            android:drawablePadding="@dimen/app_8dp"
            android:gravity="center_vertical"
            android:text="12345678911"
            android:textColor="#ff303133"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/icon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/app_15dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:src="@mipmap/join_you" />
    </RelativeLayout>


    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_50dp"
        android:layout_marginTop="@dimen/app_10dp"
        android:background="#ffffff" />

    <View style="@style/line_heng" />

    <android.support.v4.view.ViewPager
        android:id="@+id/detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" />

</LinearLayout>