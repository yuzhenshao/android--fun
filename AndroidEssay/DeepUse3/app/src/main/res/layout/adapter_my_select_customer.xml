<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/app_24dp"
        android:paddingRight="@dimen/app_20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈萍萍"
            android:textColor="@color/color_303133"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/level"
            android:layout_width="@dimen/app_26dp"
            android:layout_height="@dimen/app_20dp"
            android:layout_marginLeft="@dimen/app_5dp"
            android:src="@mipmap/cus_level1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_15dp"
        android:paddingLeft="@dimen/app_24dp"
        android:paddingRight="@dimen/app_20dp">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="18088880000"
            android:textColor="#ff606266"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/selecte_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/app_20dp"
            android:src="@mipmap/icon_unselected"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/app_18dp"
        android:background="@color/color_f5f7fa" />
</LinearLayout>