<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff5f7fa"
        android:orientation="vertical">

        <com.libcommon.titlebar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/app_20dp"
            android:layout_marginTop="@dimen/app_20dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:layout_marginBottom="@dimen/app_11dp"
            android:background="@drawable/submit_btn_selector"
            android:text="提交"
            android:textColor="@color/color_ffffff"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_commit"
            android:layout_below="@+id/titlebar"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="收入或支出" />

                    <EditText
                        android:id="@+id/income_expense_type"
                        style="@style/newly_et_st2"
                        android:hint="@string/add_custom_select"
                        android:paddingRight="0dp" />

                    <ImageView
                        android:id="@+id/income_expense_type_select"
                        style="@style/bass_iv_you" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="金额" />

                    <EditText
                        android:id="@+id/price"
                        style="@style/newly_et_st"
                        android:hint="@string/add_custom_shuru"
                        android:inputType="number"
                        android:paddingRight="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="元"
                        android:textColor="#303133"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="类别" />

                    <EditText
                        android:id="@+id/type"
                        style="@style/newly_et_st2"
                        android:hint="@string/add_custom_select"
                        android:paddingRight="0dp" />

                    <ImageView
                        android:id="@+id/type_select"
                        style="@style/bass_iv_you" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="账户" />

                    <EditText
                        android:id="@+id/account"
                        style="@style/newly_et_st2"
                        android:hint="@string/add_custom_select"
                        android:paddingRight="0dp" />

                    <ImageView
                        android:id="@+id/account_select"
                        style="@style/bass_iv_you" />

                </LinearLayout>

                <View style="@style/line_heng" />


                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="单据日期" />

                    <EditText
                        android:id="@+id/order_time"
                        style="@style/newly_et_st2"
                        android:hint="@string/add_custom_select"
                        android:paddingRight="0dp" />

                    <ImageView
                        android:id="@+id/order_time_select"
                        style="@style/bass_iv_you" />

                </LinearLayout>

                <View style="@style/line_heng" />


                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="经手人" />

                    <EditText
                        android:id="@+id/data_user_name"
                        style="@style/newly_et_st"
                        android:hint="@string/add_custom_shuru" />

                </LinearLayout>

                <View style="@style/line_space" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="项目" />

                    <EditText
                        android:id="@+id/project"
                        style="@style/newly_et_st2"
                        android:hint="@string/add_custom_select"
                        android:paddingRight="0dp" />

                    <ImageView
                        android:id="@+id/project_select"
                        style="@style/bass_iv_you" />

                </LinearLayout>

                <View style="@style/line_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/app_24dp"
                    android:paddingTop="@dimen/app_22dp"
                    android:paddingRight="@dimen/app_24dp"
                    android:paddingBottom="@dimen/app_22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textColor="#ff606266"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_10dp"
                        android:background="@null"
                        android:hint="请输入备注信息"
                        android:textColor="#ff909399"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>