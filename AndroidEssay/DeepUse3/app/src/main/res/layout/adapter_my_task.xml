<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="143dp"
    android:background="@drawable/yuanjiao_ffffff_bg_shape"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="143dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/app_12dp"
            android:layout_marginRight="@dimen/app_12dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ta_item_note"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/color_606266"
                android:layout_marginTop="@dimen/app_15dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="许总介绍的客户需要上门拜访并做好拜访记录"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:src="@mipmap/de_name"/>

                <TextView
                    android:id="@+id/tv_ta_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_303133"
                    android:layout_marginLeft="@dimen/app_10dp"
                    android:text="陈萍萍"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:src="@mipmap/task_phone"/>

                <TextView
                    android:id="@+id/tv_ta_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_303133"
                    android:layout_marginLeft="@dimen/app_10dp"
                    android:text="13899999999"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/app_80dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/app_10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ta_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:layout_marginTop="@dimen/app_15dp"
                android:text="01月09日"/>

            <TextView
                android:id="@+id/tv_ta_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="@color/color_3D7EFF"
                android:layout_marginTop="@dimen/app_5dp"
                android:textStyle="bold"
                android:text="14:00"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="@dimen/app_65dp"
        android:layout_height="143dp"
        android:textSize="16sp"
        android:background="@color/color_edeff2"
        android:gravity="center"
        android:textColor="@color/color_d0021b"
        android:text="删除"/>

</LinearLayout>