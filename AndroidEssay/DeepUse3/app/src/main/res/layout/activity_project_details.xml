<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_f5f7fa"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/app_10dp">

        <TextView
            android:id="@+id/tv_pr_khgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户管理"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/app_24dp"
            android:layout_marginTop="@dimen/app_10dp"
            android:textColor="@color/color_606266"/>

        <LinearLayout style="@style/work_ll"
            android:layout_marginTop="@dimen/app_25dp"
            android:layout_marginBottom="@dimen/app_25dp">

            <LinearLayout
                android:id="@+id/ll_pr_xxbj"
                android:layout_width="@dimen/app_70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/shenpi_iv"
                    android:src="@mipmap/pro_bianji"/>

                <TextView
                    style="@style/shenpi_tv"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/app_5dp"
                    android:text="信息编辑"/>

            </LinearLayout>

            <View style="@style/weight_heng"/>

            <LinearLayout
                android:id="@+id/ll_pr_shsz"
                android:layout_width="@dimen/app_70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/shenpi_iv"
                    android:src="@mipmap/stag_shsz"/>

                <TextView
                    style="@style/shenpi_tv"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/app_5dp"
                    android:text="售后设置"/>

            </LinearLayout>

            <View style="@style/weight_heng"/>

            <LinearLayout
                android:id="@+id/ll_pr_code"
                android:layout_width="@dimen/app_70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/shenpi_iv"
                    android:src="@mipmap/pro_code"/>

                <TextView
                    style="@style/shenpi_tv"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/app_5dp"
                    android:text="项目二维码"/>

            </LinearLayout>

            <View style="@style/weight_heng"/>

            <LinearLayout
                android:id="@+id/ll_pr_xmxx"
                android:layout_width="@dimen/app_70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/shenpi_iv"
                    android:src="@mipmap/pro_xiaoxi"/>

                <TextView
                    style="@style/shenpi_tv"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/app_5dp"
                    android:text="成员申请"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pr_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_80dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_10dp"
        android:visibility="gone"
        android:background="@color/color_ffffff">

        <ImageView
            android:layout_width="@dimen/app_36dp"
            android:layout_height="@dimen/app_36dp"
            android:layout_marginLeft="@dimen/app_20dp"
            android:src="@mipmap/work_weibao"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_606266"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/app_10dp"
            android:text="售后功能"/>

        <TextView
            android:id="@+id/tv_pr_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/color_3D7EFF"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_3D7EFF"
            android:layout_marginLeft="@dimen/app_10dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:text="砖"/>

        <View style="@style/line_shu"/>

        <TextView
            android:id="@+id/tv_pr_pay"
            android:layout_width="@dimen/app_90dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/color_d0021b"
            android:gravity="center"
            android:text="去购买"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/app_10dp"
        android:background="@color/color_ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_10dp">

            <TextView
                android:id="@+id/tv_pr_cygl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:layout_marginLeft="@dimen/app_24dp"
                android:text="成员管理"/>

            <TextView
                android:id="@+id/tv_pr_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/app_24dp"
                android:paddingLeft="@dimen/app_10dp"
                android:textColor="@color/color_909399"
                android:text="编辑"/>

            <TextView
                android:id="@+id/tv_pr_wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/app_24dp"
                android:paddingLeft="@dimen/app_10dp"
                android:visibility="gone"
                android:textColor="@color/color_909399"
                android:text="完成"/>

        </RelativeLayout>

        <com.mfzn.deepuses.view.MyRecyclerView
            android:id="@+id/pr_recyleview"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/app_25dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>