<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/app_10dp">

        <LinearLayout style="@style/newly_ll_st">

            <TextView
                android:id="@+id/tv_if_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_303133"
                android:text="是否受理"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_if_sl"
            style="@style/newly_ll_st">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:text="受理"/>

            <ImageView
                android:id="@+id/iv_if_sl"
                android:layout_width="@dimen/app_18dp"
                android:layout_height="@dimen/app_18dp"
                android:src="@mipmap/work_xuanzhong"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_if_nosl"
            style="@style/newly_ll_st">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_606266"
                android:text="不受理"/>

            <ImageView
                android:id="@+id/iv_if_nosl"
                android:layout_width="@dimen/app_18dp"
                android:layout_height="@dimen/app_18dp"
                android:src="@mipmap/work_weixuan"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_if_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="top"
            android:paddingTop="@dimen/app_5dp"
            android:paddingLeft="@dimen/app_24dp"
            android:paddingRight="@dimen/app_24dp"
            android:textColor="@color/color_606266"
            android:textSize="16sp"
            android:textColorHint="@color/color_909399"
            android:hint="请在此输入不受理的原因"
            android:background="@null"/>

    </LinearLayout>

    <Button
        android:id="@+id/but_if_qr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/app_15dp"
        android:layout_marginTop="@dimen/app_20dp"
        android:text="确认"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_gravity="bottom"
        android:background="@drawable/yuanjiao_4a9012_button_shape"/>

</LinearLayout>