<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff5f7fa"
        android:orientation="vertical">

        <com.libcommon.titlebar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlebar"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="单据编号" />

                    <EditText
                        android:id="@+id/order_num"
                        style="@style/newly_et_st2" />
                </LinearLayout>

                <View style="@style/line_space" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="收入或支出" />

                    <EditText
                        android:id="@+id/income_expense_type"
                        style="@style/newly_et_st2" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="金额" />

                    <EditText
                        android:id="@+id/price"
                        style="@style/newly_et_st2" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="类别" />

                    <EditText
                        android:id="@+id/type"
                        style="@style/newly_et_st2" />

                </LinearLayout>

                <View style="@style/line_heng" />

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="账户" />

                    <EditText
                        android:id="@+id/account"
                        style="@style/newly_et_st2" />

                </LinearLayout>

                <View style="@style/line_heng" />


                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="单据日期" />

                    <EditText
                        android:id="@+id/order_time"
                        style="@style/newly_et_st2" />

                </LinearLayout>

                <View style="@style/line_heng" />


                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="经手人" />

                    <EditText
                        android:id="@+id/data_user_name"
                        style="@style/newly_et_st2" />

                </LinearLayout>

                <View style="@style/line_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/app_24dp"
                    android:paddingTop="@dimen/app_22dp"
                    android:paddingRight="@dimen/app_24dp"
                    android:paddingBottom="@dimen/app_22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textColor="#ff606266"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_10dp"
                        android:background="@null"
                        android:focusableInTouchMode="false"
                        android:textColor="#ff909399"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>