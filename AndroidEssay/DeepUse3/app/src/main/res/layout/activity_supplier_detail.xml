<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <com.libcommon.titlebar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/line_heng" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_80dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingTop="@dimen/app_15dp">

        <ImageView
            android:id="@+id/supplier_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/app_24dp"
            android:layout_marginTop="@dimen/app_15dp"
            android:src="@mipmap/icon_jxc_supplier" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/app_6dp"
            android:layout_toLeftOf="@+id/icon"
            android:layout_toRightOf="@+id/supplier_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/supplier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大王建材有限公司"
                android:textColor="#ff303133"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_6dp"
                android:text="供应商详情"
                android:textColor="#ff909399"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/app_15dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:src="@mipmap/join_you" />
    </RelativeLayout>


    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_50dp"
        android:layout_marginTop="@dimen/app_10dp"
        android:background="#ffffff" />

    <View style="@style/line_heng" />

    <android.support.v4.view.ViewPager
        android:id="@+id/detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" />

</LinearLayout>