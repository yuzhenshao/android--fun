<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/app_24dp"
        android:paddingRight="@dimen/app_24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_64dp"
            android:gravity="bottom|right">

            <LinearLayout
                android:id="@+id/delete_btn"
                android:layout_width="@dimen/app_50dp"
                android:layout_height="@dimen/app_45dp"
                android:gravity="center_vertical|right">

                <ImageView
                    android:layout_width="@dimen/app_24dp"
                    android:layout_height="@dimen/app_24dp"
                    android:layout_marginRight="@dimen/app_12dp"
                    android:src="@drawable/select_delete" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_606266"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/app_10dp"
            android:text="单据分类"/>

        <com.mfzn.deepuses.view.MyRecyclerView
            android:id="@+id/order_type_recyleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_606266"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/app_10dp"
            android:text="状态分类"/>

        <com.mfzn.deepuses.view.MyRecyclerView
            android:id="@+id/recyleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_606266"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/app_10dp"
            android:text="作废状态分类"/>

        <com.mfzn.deepuses.view.MyRecyclerView
            android:id="@+id/cancel_recyleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_45dp"
            android:layout_marginTop="@dimen/app_35dp"
            android:background="@drawable/yuanjiao_4a9012_button_shape"
            android:text="保存"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>