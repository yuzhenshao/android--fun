<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mCommodity"
            type="com.mfzn.deepuses.bean.request.CommodityRequest" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff5f7fa"
        android:orientation="vertical">

        <com.libcommon.titlebar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/found_pro_ll"
                    android:layout_marginTop="@dimen/app_10dp">

                    <com.mfzn.deepuses.purchasesellsave.setting.view.AddImageView
                        android:id="@+id/add_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_24dp" />

                    <View style="@style/line_heng" />
                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="商品名称" />

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="*"
                            android:textColor="@color/color_d0021b" />

                        <EditText
                            style="@style/newly_et_st"
                            android:hint="@string/add_custom_shuru"
                            android:text="@={mCommodity.goodsName}" />

                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <LinearLayout
                        android:id="@+id/unit_id_container"
                        style="@style/newly_ll_st"
                        android:onClick="@{onClickListener}">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="单位" />

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="*"
                            android:textColor="@color/color_d0021b" />

                        <EditText
                            style="@style/newly_et_st2"
                            android:hint="@string/add_custom_select"
                            android:paddingRight="0dp"
                            android:text="@={mCommodity.goodsUnitID}" />

                        <ImageView
                            style="@style/bass_iv_you"
                            android:layout_marginRight="@dimen/app_20dp" />

                    </LinearLayout>


                    <View style="@style/line_heng" />

                    <LinearLayout
                        android:id="@+id/position_container"
                        style="@style/newly_ll_st"
                        android:onClick="@{onClickListener}">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="定位" />

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="*"
                            android:textColor="@color/color_d0021b" />

                        <EditText
                            style="@style/newly_et_st2"
                            android:hint="@string/add_custom_select"
                            android:paddingRight="0dp"
                            android:text="@={mCommodity.goodsPosition}" />

                        <ImageView
                            style="@style/bass_iv_you"
                            android:layout_marginRight="@dimen/app_20dp" />

                    </LinearLayout>


                    <View style="@style/line_space" />


                    <TextView
                        style="@style/newly_ll_st"
                        android:text="库存" />

                    <View style="@style/line_heng" />

                    <LinearLayout
                        style="@style/newly_ll_st"
                        android:layout_marginLeft="@dimen/app_12dp"
                        android:layout_marginRight="@dimen/app_20dp">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="仓库1" />

                        <EditText
                            style="@style/newly_et_st"
                            android:hint="@string/add_custom_shuru"
                            android:paddingRight="0dp" />
                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <LinearLayout
                        style="@style/newly_ll_st"
                        android:layout_marginLeft="@dimen/app_12dp"
                        android:layout_marginRight="@dimen/app_20dp">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="库存2" />

                        <EditText
                            android:id="@+id/et_bu_laiy"
                            style="@style/newly_et_st"
                            android:hint="@string/add_custom_shuru"
                            android:paddingRight="0dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/but_bu_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_45dp"
                    android:layout_marginLeft="@dimen/app_20dp"
                    android:layout_marginRight="@dimen/app_20dp"
                    android:textSize="18sp"
                    android:textColor="@color/color_ffffff"

                    android:layout_marginTop="@dimen/app_30dp"
                    android:layout_marginBottom="@dimen/app_11dp"
                    android:enabled="@{mCommodity.isCanSubmit}"
                    android:background="@drawable/submit_btn_selector"
                    android:onClick="@{onClickListener}"
                    android:text="提交" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>