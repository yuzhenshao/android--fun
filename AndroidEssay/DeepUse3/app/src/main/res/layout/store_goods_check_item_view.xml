<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_24dp"
        android:layout_marginTop="@dimen/app_13dp"
        android:layout_marginRight="@dimen/app_24dp"
        android:layout_marginBottom="@dimen/app_12dp">

        <ImageView
            android:id="@+id/icon_goods"
            android:layout_width="@dimen/app_75dp"
            android:layout_height="@dimen/app_75dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_no_data" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/icon_goods"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="云知枢"
            android:textColor="#303133"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/icon_goods"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="DS-233CD-1"
            android:textColor="#ff606266"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/check_stock_num"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@+id/icon_goods"
            android:layout_alignParentRight="true"
            android:text="盘点库存：9"
            android:textColor="#ff303133"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/system_stock_num"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_above="@+id/check_stock_num"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="系统库存：9"
            android:textColor="#ff303133"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/check_change_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="@dimen/app_24dp"
        android:background="#EDEFF2"
        android:gravity="right"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="盘盈盘亏  0"
        android:textColor="#ffe02020"
        android:textSize="14sp"
        />
</LinearLayout>