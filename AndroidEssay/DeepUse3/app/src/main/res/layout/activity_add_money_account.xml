<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.libcommon.titlebar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginTop="@dimen/app_20dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_11dp"
        android:background="@drawable/submit_btn_selector"
        android:text="确认添加"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical">

        <LinearLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="账户名称" />

            <EditText
                android:id="@+id/account_name"
                style="@style/newly_et_st"
                android:hint="@string/add_custom_shuru" />

        </LinearLayout>

        <View style="@style/line_heng" />

        <LinearLayout
            android:id="@+id/account_container"
            style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="账户类型" />

            <EditText
                android:id="@+id/account_type"
                style="@style/newly_et_st2"
                android:hint="@string/add_custom_select"
                android:paddingRight="0dp" />

            <ImageView
                android:id="@+id/account_type_select"
                style="@style/bass_iv_you" />

        </LinearLayout>
        <View style="@style/line_heng" />
        <LinearLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="初期余额" />

            <EditText
                android:id="@+id/account_money"
                style="@style/newly_et_st"
                android:hint="@string/add_custom_shuru"
                android:inputType="number"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>