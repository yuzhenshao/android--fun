<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_60dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp"
        android:gravity="center_vertical">

        <com.mfzn.deepuses.view.RoundImageView
            android:id="@+id/tv_home_item_icon"
            android:layout_width="36dp"
            android:layout_height="@dimen/app_36dp"
            android:layout_marginLeft="@dimen/app_22dp"
            android:scaleType="fitXY"
            android:src="@mipmap/code_gongsi"/>
        
        <TextView
            android:id="@+id/tv_home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_303133"
            android:layout_marginLeft="@dimen/app_12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:drawablePadding="@dimen/app_5dp"
            android:layout_marginRight="@dimen/app_5dp"
            android:text="麦麸智能（常州）有限公司"/>

        <View style="@style/weight_heng"/>

        <ImageView
            android:id="@+id/iv_home_item_dh"
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:visibility="gone"
            android:src="@mipmap/home_duihao"/>
        
    </LinearLayout>

</LinearLayout>