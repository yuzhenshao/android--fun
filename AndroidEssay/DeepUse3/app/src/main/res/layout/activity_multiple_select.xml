<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.droidlover.xrecyclerview.XRecyclerContentLayout
            android:id="@+id/wh_xrecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/app_50dp"
            android:layout_marginTop="@dimen/dp_10"
            app:recyclerBackgroundColor="@color/color_f5f7fa" />

        <LinearLayout
            android:id="@+id/ll_wh_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:background="@color/color_f5f7fa">

            <ImageView
                android:layout_width="@dimen/app_120dp"
                android:layout_height="@dimen/app_120dp"
                android:src="@mipmap/zuzhi_kongbai"
                android:layout_marginTop="@dimen/app_72dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_909399"
                android:layout_marginTop="@dimen/app_20dp"
                android:text="暂无客户"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_49dp"
            android:background="@color/color_edeff2"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ba_recycleview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_ba_move"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/color_4A90E2"
                android:gravity="center"
                android:paddingLeft="@dimen/app_25dp"
                android:paddingRight="@dimen/app_25dp"
                android:text="确定"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>