<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_ffffff">

        <include layout="@layout/main_title"/>

        <View
            style="@style/line_heng"
            android:layout_height="@dimen/app_10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:textSize="14sp"
                        android:text="回访问题"/>

                    <EditText
                        android:id="@+id/et_vis_problem"
                        style="@style/newly_et_st2"
                        android:paddingRight="@dimen/app_10dp"
                        android:textSize="14sp"
                        android:hint=""/>

                    <ImageView
                        style="@style/bass_iv_you"/>

                </LinearLayout>

                <View style="@style/line_heng"/>

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:textSize="14sp"
                        android:text="回访时间"/>

                    <EditText
                        android:id="@+id/et_vis_tiem"
                        style="@style/newly_et_st2"
                        android:paddingRight="@dimen/app_10dp"
                        android:textSize="14sp"
                        android:hint="@string/add_custom_select"/>

                    <ImageView
                        style="@style/bass_iv_you"/>

                </LinearLayout>

                <View style="@style/line_heng"/>

                <TextView
                    style="@style/newly_tv_st"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/app_7dp"
                    android:layout_marginLeft="@dimen/app_24dp"
                    android:text="回访内容"/>

                <EditText
                    android:id="@+id/et_vis_content"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:gravity="top"
                    android:paddingTop="@dimen/app_20dp"
                    android:paddingRight="@dimen/app_24dp"
                    android:paddingLeft="@dimen/app_24dp"
                    android:paddingBottom="@dimen/app_10dp"
                    android:textColor="@color/color_303133"
                    android:textColorHint="@color/color_BFC2CC"
                    android:textSize="14sp"
                    android:hint="请输入回访内容"
                    android:background="@null"/>

                <View style="@style/line_heng"/>

                <LinearLayout style="@style/newly_ll_st">

                    <TextView
                        style="@style/newly_tv_st"
                        android:textSize="14sp"
                        android:text="下次回访时间"/>

                    <EditText
                        android:id="@+id/et_vis_nexttiem"
                        style="@style/newly_et_st2"
                        android:paddingRight="@dimen/app_10dp"
                        android:textSize="14sp"
                        android:hint="@string/add_custom_select"/>

                    <ImageView
                        style="@style/bass_iv_you"/>

                </LinearLayout>

                <View style="@style/line_heng"/>

                <Button
                    android:id="@+id/but_vis_commit"
                    style="@style/bass_but"
                    android:text="提交"
                    android:background="@drawable/yuanjiao_bfc2cc_button_shape"
                    android:layout_marginTop="@dimen/app_110dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>