<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/app_10dp">

        <LinearLayout style="@style/newly_ll_st">

            <TextView
                android:id="@+id/tv_can_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_303133"
                android:text="请输入原因"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_can_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingTop="@dimen/app_5dp"
            android:paddingLeft="@dimen/app_24dp"
            android:paddingRight="@dimen/app_24dp"
            android:textColor="@color/color_606266"
            android:textSize="14sp"
            android:textColorHint="@color/color_909399"
            android:hint="在此输入取消工单原因"
            android:background="@null"/>

    </LinearLayout>

    <Button
        android:id="@+id/but_can_commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/app_15dp"
        android:layout_marginTop="@dimen/app_20dp"
        android:text="提交"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_gravity="bottom"
        android:background="@drawable/yuanjiao_4a9012_button_shape"/>

</LinearLayout>