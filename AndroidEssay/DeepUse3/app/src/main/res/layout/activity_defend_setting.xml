<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_10dp"
        android:background="@color/color_ffffff"
        android:paddingBottom="@dimen/app_10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_BFC2CC"
            android:layout_marginLeft="@dimen/app_24dp"
            android:text="维保项目"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_BFC2CC"
            android:layout_marginLeft="@dimen/app_51dp"
            android:text="下次维保时间"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_BFC2CC"
            android:layout_marginLeft="@dimen/app_30dp"
            android:text="维保间隔"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/def_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/app_1dp"
            android:divider="@color/color_f5f7fa"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/app_80dp"
            android:background="@color/color_ffffff"/>

        <Button
            android:id="@+id/but_def_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/app_15dp"
            android:text="添加"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:background="@drawable/yuanjiao_4a9012_button_shape"/>

    </FrameLayout>

</LinearLayout>