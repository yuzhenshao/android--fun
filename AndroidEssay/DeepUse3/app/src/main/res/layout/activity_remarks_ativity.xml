<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/app_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_909399"
            android:layout_marginLeft="@dimen/app_24dp"
            android:layout_marginTop="@dimen/app_12dp"
            android:text="备注信息"/>

        <EditText
            android:id="@+id/et_rem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/zuzhi_remarks"
            android:textSize="14sp"
            android:textColorHint="@color/color_BFC2CC"
            android:textColor="@color/color_303133"
            android:paddingTop="@dimen/app_10dp"
            android:paddingBottom="@dimen/app_10dp"
            android:paddingLeft="@dimen/app_24dp"
            android:paddingRight="@dimen/app_24dp"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>