<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f7fa"
        android:orientation="vertical">

        <include layout="@layout/main_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f7fa"
                android:orientation="vertical">

                <LinearLayout style="@style/found_pro_ll"
                    android:layout_marginTop="@dimen/app_10dp">

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="客户姓名" />

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="*"
                            android:textColor="@color/color_d0021b" />

                        <EditText
                            android:id="@+id/et_bu_name"
                            style="@style/customer_et_st"
                            android:hint="@string/add_custom_shuru" />

                    </LinearLayout>


                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="联系电话" />

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="*"
                            android:textColor="@color/color_d0021b" />

                        <EditText
                            android:id="@+id/et_bu_phone"
                            style="@style/customer_et_st"
                            android:inputType="number"
                            android:hint="@string/add_custom_shuru" />

                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="跟进状态" />

                        <EditText
                            android:id="@+id/et_bu_type"
                            style="@style/newly_et_st2"
                            android:hint="@string/add_custom_select"
                            android:paddingRight="0dp" />

                        <ImageView
                            style="@style/bass_iv_you" />

                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="客户等级" />

                        <EditText
                            android:id="@+id/et_bu_level"
                            style="@style/newly_et_st2"
                            android:hint="@string/add_custom_select"
                            android:paddingRight="0dp" />

                        <ImageView
                            style="@style/bass_iv_you"/>

                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <LinearLayout style="@style/newly_ll_st">

                        <TextView
                            style="@style/newly_tv_st"
                            android:text="客户来源" />

                        <EditText
                            android:id="@+id/et_bu_laiy"
                            style="@style/newly_et_st2"
                            android:hint="@string/add_custom_select"
                            android:paddingRight="0dp" />

                        <ImageView
                            style="@style/bass_iv_you" />

                    </LinearLayout>

                    <View style="@style/line_heng" />

                    <TextView
                        style="@style/newly_tv_st"
                        android:layout_marginLeft="@dimen/app_24dp"
                        android:layout_marginTop="@dimen/app_20dp"
                        android:text="客户备注" />

                    <EditText
                        android:id="@+id/et_bu_bz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/add_custom_shuru"
                        android:textColorHint="@color/color_BFC2CC"
                        android:textColor="@color/color_303133"
                        android:textSize="16sp"
                        android:paddingLeft="@dimen/app_24dp"
                        android:paddingRight="@dimen/app_24dp"
                        android:paddingTop="@dimen/app_20dp"
                        android:paddingBottom="@dimen/app_20dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/but_bu_commit"
                    style="@style/bass_but"
                    android:layout_marginTop="@dimen/app_30dp"
                    android:layout_marginBottom="@dimen/app_11dp"
                    android:background="@drawable/yuanjiao_bfc2cc_button_shape"
                    android:text="保存" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>