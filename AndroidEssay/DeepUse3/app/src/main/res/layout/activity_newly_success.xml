<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_10dp"
        android:background="@color/color_f5f7fa"/>

    <ImageView
        android:layout_width="@dimen/app_70dp"
        android:layout_height="@dimen/app_70dp"
        android:layout_marginTop="@dimen/app_52dp"
        android:src="@mipmap/apply_success"/>

    <TextView
        android:id="@+id/tv_suc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/color_303133"
        android:layout_marginTop="@dimen/app_20dp"
        android:text="项目创建成功"/>

    <Button
        android:id="@+id/but_check"
        style="@style/bass_but"
        android:text="立即查看"
        android:enabled="true"
        android:layout_marginLeft="@dimen/app_38dp"
        android:layout_marginRight="@dimen/app_38dp"
        android:background="@drawable/yuanjiao_4a9012_button_shape"
        android:layout_marginTop="@dimen/app_50dp"/>

    <Button
        android:id="@+id/but_add"
        style="@style/bass_but"
        android:text="邀请成员加入"
        android:enabled="true"
        android:textColor="@color/color_4A90E2"
        android:layout_marginLeft="@dimen/app_38dp"
        android:layout_marginRight="@dimen/app_38dp"
        android:background="@drawable/yuanjiao_4a90e2_xian_shape"
        android:layout_marginTop="@dimen/app_20dp"/>

</LinearLayout>