<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/main_title"/>

    <TextView
        android:id="@+id/tv_est_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#303133"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="26dp"
        android:text="请您创建您的企业/团队"/>

    <EditText
        android:id="@+id/et_est_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@null"
        android:paddingLeft="12dp"
        android:textSize="14sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#606266"
        android:layout_marginTop="29dp"
        android:textColorHint="#bfc2cc"
        android:hint="企业/团队名称"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#edeff2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="29dp">

        <EditText
            android:id="@+id/et_est_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="@null"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#606266"
            android:focusableInTouchMode="false"
            android:textColorHint="#bfc2cc"
            android:hint="所在城市"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:src="@mipmap/join_you"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#edeff2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="29dp">

        <EditText
            android:id="@+id/et_est_details"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="@null"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#606266"
            android:focusableInTouchMode="false"
            android:textColorHint="#bfc2cc"
            android:hint="详细地址"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:src="@mipmap/join_you"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#edeff2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="29dp">

        <EditText
            android:id="@+id/et_est_range"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="13dp"
            android:background="@null"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="number"
            android:focusableInTouchMode="false"
            android:textColor="#606266"
            android:textColorHint="#bfc2cc"
            android:hint="经营范围（最多选择5个）"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:src="@mipmap/join_you"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#edeff2"/>

    <TextView
        android:id="@+id/tv_est_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#d0021b"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:layout_marginLeft="36dp"
        android:text="请输入公司名称"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/but_establish"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="创建"
        android:enabled="false"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/yuanjiao_bfc2cc_button_shape"/>

</LinearLayout>