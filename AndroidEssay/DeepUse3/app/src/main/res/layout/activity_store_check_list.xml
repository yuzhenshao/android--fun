<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.libcommon.titlebar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/line_heng" />

        <include layout="@layout/search_view" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_5dp"
            android:background="#ffffff" />

        <include layout="@layout/empty_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_64dp"
                android:gravity="bottom|right">

                <LinearLayout
                    android:id="@+id/ll_se_del"
                    android:layout_width="@dimen/app_50dp"
                    android:layout_height="@dimen/app_45dp"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="@dimen/app_24dp"
                        android:layout_height="@dimen/app_24dp"
                        android:layout_marginRight="@dimen/app_12dp"
                        android:src="@drawable/select_delete" />

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/app_20dp"
                    android:paddingRight="@dimen/app_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_10dp"
                        android:text="仓库"
                        android:textColor="#303133"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/store_recyleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_35dp"
                        android:text="盘点状态"
                        android:textColor="#303133"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/status_recyleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_35dp"
                        android:text="日期筛选"
                        android:textColor="#303133"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/date_selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_30dp">

                        <EditText
                            android:id="@+id/date_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:hint="请选择日期" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/join_you" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/save_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_45dp"
                        android:layout_marginTop="@dimen/app_114dp"
                        android:background="@drawable/yuanjiao_4a9012_button_shape"
                        android:text="保存"
                        android:textColor="@color/color_ffffff"
                        android:textSize="16sp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>