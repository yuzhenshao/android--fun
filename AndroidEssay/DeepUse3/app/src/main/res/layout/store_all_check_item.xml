<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_120dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_110dp"
        android:background="@mipmap/store_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_24dp">

        <ImageView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/app_13dp"
            android:src="@mipmap/icon_store" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/app_13dp"
            android:layout_toRightOf="@+id/store_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总仓"
                android:textColor="#ff303133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_10dp"
                android:text="开始日期：2020/02/29"
                android:textColor="#ff606266"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_5dp"
                android:text="开始日期：2020/02/29"
                android:textColor="#ff606266"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/store_check_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/app_13dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="-10dp"
        android:alpha="0.2"
        android:src="@mipmap/examine_pending" />
    <View
        style="@style/line_space"
        android:layout_alignParentBottom="true" />
</RelativeLayout>