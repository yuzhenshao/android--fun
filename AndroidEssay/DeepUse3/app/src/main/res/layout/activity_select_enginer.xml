<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/app_64dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao_edeff2_bg_shape"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:layout_height="32dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/search"/>

            <EditText
                android:id="@+id/et_se_search"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="14sp"
                android:textColorHint="#909399"
                android:paddingLeft="10dp"
                android:textColor="#303133"
                android:hint="搜索工程师手机号"
                android:background="@null"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_se_qx"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_32dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="@dimen/app_4dp"
            android:layout_marginRight="@dimen/app_11dp"
            android:paddingLeft="@dimen/app_13dp"
            android:paddingRight="@dimen/app_13dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/color_4A90E2"
            android:text="取消"/>

        <TextView
            android:id="@+id/tv_se_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_32dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="@dimen/app_4dp"
            android:layout_marginRight="@dimen/app_11dp"
            android:paddingLeft="@dimen/app_13dp"
            android:paddingRight="@dimen/app_13dp"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/color_4A90E2"
            android:text="搜索"/>

    </LinearLayout>

    <View style="@style/line_heng"/>

    <LinearLayout
        android:id="@+id/ll_se_add"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <com.mfzn.deepuses.view.RoundImageView
            android:id="@+id/iv_se_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:scaleType="fitXY"
            android:src="@mipmap/moren_touxiang"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_se_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_303133"
                android:textSize="16sp"
                android:text=""/>

            <TextView
                android:id="@+id/tv_se_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_909399"
                android:layout_marginTop="@dimen/app_5dp"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_se_add"
            android:layout_width="@dimen/app_70dp"
            android:layout_height="@dimen/app_23dp"
            android:textSize="14sp"
            android:textColor="@color/color_3D7EFF"
            android:gravity="center"
            android:layout_marginRight="@dimen/app_24dp"
            android:background="@drawable/yuanjiao_3d7eff_xian_shape"
            android:text="+添加"/>

    </LinearLayout>

</LinearLayout>