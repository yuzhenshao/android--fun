<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f7fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/app_50dp"
        android:orientation="vertical">

        <include layout="@layout/main_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/color_ffffff"
            android:layout_marginTop="@dimen/app_10dp"
            android:layout_height="@dimen/app_80dp">

            <ImageView
                android:layout_width="@dimen/app_24dp"
                android:layout_height="@dimen/app_24dp"
                android:layout_marginLeft="@dimen/app_24dp"
                android:layout_marginTop="@dimen/app_13dp"
                android:src="@mipmap/sh_gongsi"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/app_5dp"
                android:layout_marginRight="@dimen/app_20dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_share_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/color_303133"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/app_17dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="麦麸智能（常州）有限公司"/>

                <ImageView
                    android:id="@+id/iv_share_vip"
                    android:layout_width="@dimen/app_75dp"
                    android:layout_height="@dimen/app_18dp"
                    android:layout_marginTop="@dimen/app_10dp"
                    android:src="@mipmap/br_vip1"/>

            </LinearLayout>

        </LinearLayout>

        <com.mfzn.deepuses.view.MyRecyclerView
            android:id="@+id/share_recyleview"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/app_5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_49dp"
        android:background="@color/color_edeff2"
        android:gravity="center_vertical"
        android:layout_gravity="bottom">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ba_recycleview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/tv_ba_move"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/color_4A90E2"
            android:gravity="center"
            android:paddingLeft="@dimen/app_25dp"
            android:paddingRight="@dimen/app_25dp"
            android:text="确定"/>

    </LinearLayout>

</FrameLayout>