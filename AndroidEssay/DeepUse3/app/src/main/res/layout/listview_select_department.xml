<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/ll_de_item_select"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_de_item_select"
                android:layout_width="@dimen/app_24dp"
                android:layout_height="@dimen/app_24dp"
                android:layout_marginLeft="@dimen/app_20dp"
                android:layout_marginRight="@dimen/app_20dp"
                android:src="@mipmap/regi_weixuan"/>

        </LinearLayout>

        <TextView
            android:id="@+id/iv_de_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#303133"
            android:text="部门名称"/>

        <ImageView
            android:id="@+id/iv_de_item_bj"
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:visibility="gone"
            android:src="@mipmap/join_you"/>

    </LinearLayout>

    <include layout="@layout/loyout_department"/>

</LinearLayout>