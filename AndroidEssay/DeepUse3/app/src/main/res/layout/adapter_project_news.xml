<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pr_item_time"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textSize="14sp"
        android:textColor="@color/color_909399"
        android:gravity="center"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiao_ffffff_bg_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_150dp"
            android:paddingLeft="12dp"
            android:paddingRight="@dimen/app_12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <com.mfzn.deepuses.view.RoundImageView
                    android:id="@+id/iv_pr_item_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/moren_touxiang"/>

                <TextView
                    android:id="@+id/tv_pr_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#303133"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#606266"
                    android:text="申请加入组织"/>

                <TextView
                    android:id="@+id/tv_pr_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#3D7EFF"
                    android:visibility="gone"
                    android:layout_marginRight="24dp"
                    android:text="已通过"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#606266"
                    android:text="申请加入："/>

                <TextView
                    android:id="@+id/tv_pr_item_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:textSize="16sp"
                    android:textColor="#303133"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#606266"
                    android:text="身份信息："/>

                <TextView
                    android:id="@+id/tv_pr_item_xx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:textSize="16sp"
                    android:textColor="#303133"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#606266"
                    android:text="申请理由："/>

                <TextView
                    android:id="@+id/tv_pr_item_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:textSize="16sp"
                    android:textColor="#303133"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/loyout_project_news"/>

    </LinearLayout>

</LinearLayout>