<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.libcommon.titlebar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginTop="@dimen/app_20dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_11dp"
        android:background="@drawable/submit_btn_selector"
        android:text="确认转账"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical">


        <RelativeLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:layout_alignParentLeft="true"
                android:text="转出账户" />

            <TextView
                android:id="@+id/money_out_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:onClick="@{onClickListener}"
                android:text="建行1301"
                android:textColor="#909399"
                android:textSize="16sp" />
        </RelativeLayout>

        <View style="@style/line_heng" />

        <RelativeLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:layout_alignParentLeft="true"
                android:text="账户余额" />

            <TextView
                android:id="@+id/out_account_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:onClick="@{onClickListener}"
                android:text="39000.00 元"
                android:textColor="#909399"
                android:textSize="16sp" />
        </RelativeLayout>

        <View style="@style/line_heng" />


        <LinearLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="转账金额" />

            <EditText
                android:id="@+id/transfer_money"
                style="@style/newly_et_st"
                android:hint="@string/add_custom_shuru"
                android:inputType="number"
                android:paddingRight="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="元"
                android:textColor="#303133"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/line_space" />


        <LinearLayout
            android:id="@+id/account_container"
            style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="转入账户" />

            <EditText
                android:id="@+id/money_in_account"
                style="@style/newly_et_st2"
                android:hint="@string/add_custom_select"
                android:paddingRight="0dp" />

            <ImageView
                android:id="@+id/money_in_select"
                style="@style/bass_iv_you" />

        </LinearLayout>

        <RelativeLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:layout_alignParentLeft="true"
                android:text="账户余额" />

            <TextView
                android:id="@+id/in_account_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:text="111"
                android:textColor="#909399"
                android:textSize="16sp" />
        </RelativeLayout>

        <View style="@style/line_heng" />

        <LinearLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="单据日期" />

            <EditText
                android:id="@+id/transfer_money_date"
                style="@style/newly_et_st2"
                android:hint="@string/add_custom_select"
                android:paddingRight="0dp" />

            <ImageView
                android:id="@+id/transfer_money_date_select"
                style="@style/bass_iv_you" />

        </LinearLayout>

        <View style="@style/line_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="@dimen/app_24dp"
            android:paddingTop="@dimen/app_22dp"
            android:paddingRight="@dimen/app_24dp"
            android:paddingBottom="@dimen/app_22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textColor="#ff606266"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_10dp"
                android:background="@null"
                android:hint="请输入备注信息"
                android:textColor="#ff909399"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>