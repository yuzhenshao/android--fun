<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="50dp">

    <include layout="@layout/loyout_add_customer"/>

    <LinearLayout
        android:id="@+id/llshow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/app_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:src="@mipmap/de_name"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_303133"
            android:layout_marginLeft="@dimen/app_10dp"
            android:text="陈萍萍"/>

        <ImageView
            android:id="@+id/tv_del"
            android:layout_width="@dimen/app_24dp"
            android:layout_height="@dimen/app_24dp"
            android:layout_marginLeft="@dimen/app_5dp"
            android:layout_marginBottom="@dimen/app_10dp"
            android:src="@mipmap/work_delete"/>

    </LinearLayout>

</LinearLayout>