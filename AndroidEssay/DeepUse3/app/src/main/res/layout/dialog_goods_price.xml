<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_89dp"
        android:paddingLeft="@dimen/app_24dp"
        android:paddingRight="@dimen/app_24dp">


        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/app_75dp"
            android:layout_height="@dimen/app_75dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/app_15dp"
            android:layout_toRightOf="@+id/goods_image"
            android:text="无线路由器"
            android:textColor="#303133"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goods_stock_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/app_10dp"
            android:layout_toRightOf="@+id/goods_image"
            android:text="库存：0"
            android:textColor="#606266"
            android:textSize="16sp" />


        <include
            layout="@layout/enumerator_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_20dp"
            android:layout_alignBottom="@+id/goods_stock_num"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="单价" />

        <EditText
            android:id="@+id/cost_price"
            style="@style/newly_et_st"
            android:hint="@string/add_custom_shuru"
            android:inputType="number"
            android:paddingRight="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:text="元"
            android:textColor="#303133"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/line_heng" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_24dp"
            android:gravity="center_vertical"
            android:text="是否含税"
            android:textColor="#ff606266"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/check_box_selector"
            android:button="@null"
            android:focusable="false"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <View style="@style/line_heng" />

    <LinearLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:text="税率" />

        <EditText
            android:id="@+id/tax_rate"
            style="@style/newly_et_st2"
            android:hint="@string/add_custom_select"
            android:paddingRight="0dp" />

        <ImageView
            android:id="@+id/tax_rate_select"
            style="@style/bass_iv_you"
            android:layout_marginRight="@dimen/app_20dp" />
    </LinearLayout>

    <RelativeLayout style="@style/newly_ll_st">

        <TextView
            style="@style/newly_tv_st"
            android:layout_alignParentLeft="true"
            android:text="税后单价" />

        <TextView
            android:id="@+id/tax_rate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/app_20dp"
            android:text="99元"
            android:textColor="#909399"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginTop="@dimen/app_30dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:layout_marginBottom="@dimen/app_36dp"
        android:background="@drawable/submit_btn_selector"
        android:text="确认"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp" />
</LinearLayout>