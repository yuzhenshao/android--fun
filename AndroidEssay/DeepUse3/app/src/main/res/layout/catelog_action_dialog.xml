<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/general_shape"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="增加子分类"
            android:textColor="#303133"
            android:textSize="16sp" />

        <View style="@style/line_heng" />

        <TextView
            android:id="@+id/rename_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="重命名"
            android:textColor="#303133"
            android:textSize="16sp" />

        <View style="@style/line_heng" />
        <TextView
            android:id="@+id/delete_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="删除分类"
            android:textColor="@color/x_red"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/cancel_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp"
        android:background="@drawable/general_shape"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="#4a90e2"
        android:textSize="16sp" />
</LinearLayout>