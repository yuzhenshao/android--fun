<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:orientation="vertical">

    <com.libcommon.titlebar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_65dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@mipmap/icon_check"
                        android:text="待审核"
                        android:textColor="#3D7EFF"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/app_4dp"
                        android:layout_marginBottom="@dimen/app_10dp"
                        android:gravity="bottom"
                        android:text="…"
                        android:textColor="#909399"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/status_check_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/app_4dp"
                        android:drawableTop="@mipmap/icon_checked"
                        android:text="未完成"
                        android:textColor="#ff909399"
                        android:textSize="18sp" />


                </LinearLayout>


                <LinearLayout
                    style="@style/newly_ll_st"
                    android:layout_marginTop="@dimen/app_10dp"
                    android:background="#ffffff">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="客户名称" />

                    <TextView
                        android:id="@+id/user_name"
                        style="@style/newly_et_st"
                        android:text="大王建材有限公司" />

                </LinearLayout>


                <LinearLayout
                    style="@style/newly_ll_st"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="联系电话" />

                    <TextView
                        android:id="@+id/user_phone"
                        style="@style/newly_et_st"
                        android:text="188267" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_10dp"
                    android:background="#ffffff" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_44dp"
                    android:background="#ffffff"
                    android:paddingLeft="@dimen/app_24dp"
                    android:paddingRight="@dimen/app_24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="整单优惠："
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/discount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="-￥100.00"
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                </RelativeLayout>

                <LinearLayout
                    style="@style/newly_ll_st"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff">

                    <TextView
                        style="@style/newly_tv_st"
                        android:text="总金额" />

                    <TextView
                        android:id="@+id/total_money"
                        style="@style/newly_et_st"
                        android:text="¥2390.00"
                        android:textColor="#E02020" />

                </LinearLayout>

                <LinearLayout
                    style="@style/newly_ll_st"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/store_type_name"
                        style="@style/newly_tv_st"
                        android:text="出货仓库" />

                    <TextView
                        android:id="@+id/store_name"
                        style="@style/newly_et_st"
                        android:text="1号仓" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/store_address_container"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:paddingLeft="@dimen/app_24dp"
                    android:paddingRight="@dimen/app_24dp"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <TextView
                        style="@style/newly_tv_st"
                        android:layout_marginTop="@dimen/app_21dp"
                        android:text="送货信息" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_20dp"
                        android:text="常州市武进区万达广场1楼" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_50dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/app_24dp"
                    android:text="销售单信息"
                    android:textColor="#ff303133"
                    android:textSize="16sp" />

                <RelativeLayout
                    style="@style/newly_ll_text"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="单据编号:"
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="BJ201810101308362"
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/newly_ll_text"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="单据日期："
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="BJ201810101308362"
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/newly_ll_text"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="外部单号："
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/out_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="BJ201810101308362"
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/newly_ll_text"
                    android:layout_marginBottom="@dimen/app_75dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="制单人："
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="BJ201810101308362"
                        android:textColor="#ff909399"
                        android:textSize="14sp" />

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/check_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_49dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/app_15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pass"
                android:layout_width="@dimen/app_150dp"
                android:layout_height="match_parent"
                android:background="@drawable/yuanjiao_4a9012_button_shape"
                android:text="审核通过"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_unpass"
                android:layout_width="@dimen/app_150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_20dp"
                android:background="@drawable/yuanjiao_bfc2cc_button_shape"
                android:text="审核不通过"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <include layout="@layout/empty_view" />
    </RelativeLayout>
</LinearLayout>