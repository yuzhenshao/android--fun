<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_f5f7fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_50dp"
        android:background="@mipmap/store_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_24dp">

        <ImageView
            android:id="@+id/store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_store" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/store_icon"
            android:layout_marginLeft="@dimen/app_5dp"
            android:gravity="center_vertical"
            android:text="总仓"
            android:textColor="#ff303133"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>