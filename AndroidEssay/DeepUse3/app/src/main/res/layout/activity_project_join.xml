<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_10dp"
        android:background="@color/color_f5f7fa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_15dp"
        android:layout_marginLeft="@dimen/app_24dp">

        <ImageView
            android:layout_width="@dimen/app_30dp"
            android:layout_height="@dimen/app_30dp"
            android:src="@mipmap/moren_touxiang"/>

        <TextView
            android:id="@+id/tv_pjo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_303133"
            android:layout_marginLeft="@dimen/app_10dp"
            android:text="潘泓言"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_909399"
            android:layout_marginLeft="@dimen/app_10dp"
            android:text="邀请你加入"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pjo_proname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/color_303133"
        android:layout_marginTop="@dimen/app_30dp"
        android:layout_marginLeft="@dimen/app_24dp"
        android:text="麦麸智能（常州）有限公司 项目"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/color_606266"
        android:layout_marginTop="@dimen/app_10dp"
        android:layout_marginLeft="@dimen/app_24dp"
        android:text="加入项目，开启智慧工地"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_15dp"
        android:layout_marginLeft="@dimen/app_24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_d0021b"
            android:text="*"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_606266"
            android:text="请选择您的角色（仅可选一样）"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_30dp"
        android:layout_marginTop="@dimen/app_20dp"
        android:layout_marginLeft="@dimen/app_24dp"
        android:layout_marginRight="@dimen/app_24dp">

        <TextView
            android:layout_width="@dimen/app_90dp"
            android:layout_height="@dimen/app_30dp"
            android:text="工长"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/bu_screen_choice"
            android:textColor="@drawable/text_screen_choice"/>

        <View style="@style/weight_heng"/>

        <TextView
            android:layout_width="@dimen/app_90dp"
            android:layout_height="@dimen/app_30dp"
            android:text="工程师"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/bu_screen_choice"
            android:textColor="@drawable/text_screen_choice"/>

        <View style="@style/weight_heng"/>

        <TextView
            android:layout_width="@dimen/app_90dp"
            android:layout_height="@dimen/app_30dp"
            android:text="水电"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/bu_screen_choice"
            android:textColor="@drawable/text_screen_choice"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/but_add"
        style="@style/bass_but"
        android:text="确认加入"
        android:enabled="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/yuanjiao_4a9012_button_shape"/>

</LinearLayout>