<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/seListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_10dp"
            android:dividerHeight="@dimen/app_1dp"
            android:background="@color/color_ffffff"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:divider="@color/color_edeff2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_49dp"
        android:background="@color/color_edeff2"
        android:gravity="center_vertical"
        android:layout_gravity="bottom">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/serecycleview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/tv_se_move"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/color_4A90E2"
            android:gravity="center"
            android:paddingLeft="@dimen/app_25dp"
            android:paddingRight="@dimen/app_25dp"
            android:text="чбошод"/>

    </LinearLayout>

</LinearLayout>