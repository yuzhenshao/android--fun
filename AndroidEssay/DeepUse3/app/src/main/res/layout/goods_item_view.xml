<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/app_24dp"
    android:layout_marginRight="@dimen/app_24dp"
    android:layout_marginTop="@dimen/app_13dp"
    android:layout_marginBottom="@dimen/app_12dp">

    <ImageView
        android:id="@+id/icon_goods"
        android:layout_width="@dimen/app_75dp"
        android:layout_height="@dimen/app_75dp"
        android:layout_gravity="center"
        android:src="@mipmap/faxian_news_list_icon" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/icon_goods"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="云知枢"
        android:textColor="#303133"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/icon_goods"
        android:layout_below="@+id/name"
        android:layout_marginTop="@dimen/app_20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="零售价：350 元"
        android:textColor="#ff606266"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/goods_stock_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="库存：5"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/price"
        android:layout_marginTop="@dimen/app_20dp"
        android:textColor="#ffe02020"
        android:textSize="16sp"
        />
</RelativeLayout>