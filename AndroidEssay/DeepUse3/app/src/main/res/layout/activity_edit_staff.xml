<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/app_10dp">

        <LinearLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="姓名"
                android:textColor="@color/color_909399" />

            <EditText
                android:id="@+id/et_edit_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请输入姓名"
                android:textSize="16sp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/app_6dp"
                android:textColorHint="@color/color_909399"
                android:textColor="@color/color_303133"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_edit_name"
                style="@style/bass_iv_delete"/>

        </LinearLayout>

        <View style="@style/line_heng"/>

        <LinearLayout style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="电话"
                android:layout_weight="1"
                android:textColor="@color/color_909399" />

            <TextView
                android:id="@+id/tv_edit_phone"
                style="@style/edit_staff_tv"
                android:text="" />

        </LinearLayout>

        <View style="@style/line_heng"/>

        <LinearLayout
            style="@style/newly_ll_st">

            <TextView
                style="@style/newly_tv_st"
                android:text="部门"
                android:textColor="@color/color_909399" />

            <EditText
                android:id="@+id/tv_edit_bm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请选择部门"
                android:textSize="16sp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/app_6dp"
                android:textColorHint="@color/color_909399"
                android:focusableInTouchMode="false"
                android:textColor="@color/color_303133"
                android:layout_height="match_parent" />

            <ImageView
                style="@style/bass_iv_you" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/newly_ll_st"
        android:layout_marginTop="@dimen/app_10dp"
        android:background="@color/color_ffffff">

        <TextView
            style="@style/newly_tv_st"
            android:text="入职时间"
            android:textColor="@color/color_909399" />

        <EditText
            android:id="@+id/et_edit_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请选择入职时间"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/app_6dp"
            android:textColorHint="@color/color_909399"
            android:focusableInTouchMode="false"
            android:textColor="@color/color_303133"
            android:layout_height="match_parent" />

        <ImageView
            style="@style/bass_iv_you"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_edit_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_45dp"
        android:layout_marginTop="@dimen/app_30dp"
        android:layout_marginLeft="@dimen/app_20dp"
        android:layout_marginRight="@dimen/app_20dp"
        android:textSize="18sp"
        android:textColor="@color/color_d0021b"
        android:gravity="center"
        android:text="删除该员工"
        android:background="@drawable/yuanjiao_d0021b_xian_shape"/>

</LinearLayout>