<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_100dp"
    android:paddingLeft="@dimen/app_24dp"
    android:paddingTop="@dimen/app_13dp"
    android:paddingRight="@dimen/app_24dp"
    android:paddingBottom="@dimen/app_12dp">

    <ImageView
        android:id="@+id/icon_goods"
        android:layout_width="@dimen/app_75dp"
        android:layout_height="@dimen/app_75dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_no_data" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/icon_goods"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="云知枢"
                android:textColor="#303133"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/system_sum_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="系统库存：5"
                android:textColor="#303133"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="DS-233CD-1"
                android:textColor="#ff909399"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/check_sum_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="盘点库存：5"
                android:textColor="#303133"
                android:textSize="16sp" />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>