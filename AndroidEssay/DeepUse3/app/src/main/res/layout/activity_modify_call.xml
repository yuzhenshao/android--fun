<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_60dp">

        <EditText
            android:id="@+id/et_mod_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入修改的昵称"
            android:textColor="@color/color_606266"
            android:paddingLeft="@dimen/app_24dp"
            android:paddingRight="@dimen/app_24dp"
            android:textColorHint="@color/color_909399"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_mod_delete"
            android:layout_width="@dimen/app_60dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="@dimen/app_24dp"
                android:layout_height="@dimen/app_24dp"
                android:layout_marginRight="@dimen/app_20dp"
                android:src="@mipmap/com_delete" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/line_heng" />

</LinearLayout>