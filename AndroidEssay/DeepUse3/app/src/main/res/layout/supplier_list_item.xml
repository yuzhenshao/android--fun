<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_89dp"
    android:layout_marginTop="@dimen/app_5dp"
    android:paddingLeft="@dimen/app_24dp"
    android:paddingRight="@dimen/app_24dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/app_15dp"
        android:src="@mipmap/icon_jxc_supplier" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/app_15dp"
        android:layout_toRightOf="@+id/store_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/supplier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大王建材有限公司"
            android:textColor="#ff303133"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_15dp">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_phone" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/photo"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="负责人：张三/13912345678"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:textColor="#ff606266"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>