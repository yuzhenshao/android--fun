<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_corner8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_white_corner8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="#203b64"
            android:textSize="14sp"
            android:gravity="center"
            android:text="查看备注"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0"
            android:background="@color/color_cococo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/cha_diuan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginLeft="9dp"
                android:text="作业环境"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chakan_huanjing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="一楼"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/cha_diuan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginLeft="9dp"
                android:text="服务系统"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chakan_xitong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="视频监控"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/cha_diuan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginLeft="9dp"
                android:text="点位说明"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chakan_shuoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="网络摄像机（庭院立杆安装）"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/cha_diuan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginLeft="9dp"
                android:text="备注"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chakan_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="6dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="装这个的时候切记不要拿错型号！"/>

        <TextView
            android:id="@+id/tv_chakan_queren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textColor="#ffffff"
            android:background="@drawable/blue_yuanjiao_button_shape2"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="13dp"
            android:textSize="14sp"
            android:text="确认"/>

    </LinearLayout>

</LinearLayout>