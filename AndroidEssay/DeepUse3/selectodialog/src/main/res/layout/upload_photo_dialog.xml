<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_white_corner8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/but_zhaopian_paizhao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="拍照"
            android:gravity="center"
            android:textColor="@color/color_4F7DBC"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"/>

        <TextView
            android:gravity="center"
            android:id="@+id/but_zhaopian_xiangce"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="从手机相册中选择"
            android:textColor="@color/color_4F7DBC"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:gravity="center"
        android:id="@+id/but_zhaopian_quxiao"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_white_corner8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="取消"
        android:textColor="@color/color_4F7DBC"
        android:textSize="14sp" />

</LinearLayout>