<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:id="@+id/ll_finish"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_white_corner8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="确认信息"
            android:textColor="#606266"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/yuan_4a90e2_dian_shapes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="质保起始日期"
                android:textColor="#909399"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pro_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#303133"
            android:layout_marginTop="10dp"
            android:paddingLeft="34dp"
            android:text="2019.08.08"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="#edeff2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/yuan_4a90e2_dian_shapes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="质保截止日期"
                android:textColor="#909399"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pro_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#303133"
            android:layout_marginTop="10dp"
            android:paddingLeft="34dp"
            android:text="2019.08.08"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="#edeff2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/yuan_4a90e2_dian_shapes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="项目名称"
                android:textColor="#909399"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#303133"
            android:layout_marginTop="10dp"
            android:paddingLeft="34dp"
            android:text="麦麸智能科技（常州）有限公司"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#bfc2cc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/tv_pro_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_widget_dialog_leftbtn"
                android:gravity="center"
                android:textColor="#4a90e2"
                android:text="取消"
                android:textSize="16sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#bfc2cc"/>

            <Button
                android:id="@+id/tv_pro_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_widget_dialog_rightbtn"
                android:gravity="center"
                android:textColor="#4a90e2"
                android:text="确定"
                android:textSize="17sp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>